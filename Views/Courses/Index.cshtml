@using Humanizer
@model IEnumerable<ITSL_Administration.Models.Course>
@{
    ViewData["Title"] = "Courses - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item active">Courses</li>
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary-blue">
            <i class="fas fa-book-open me-2"></i>Courses - ITSL Administration
        </h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Create New Course
            </a>
        }
    </div>

    <!-- Search & Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Search Courses</label>
                    <input type="text" name="searchString" value="@ViewBag.CurrentFilter"
                           class="form-control" placeholder="Search by course name, code, or description...">
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Sort By</label>
                    <select name="filterField" class="form-select">
                        <option value="">Default Order</option>
                        <option value="Name" selected="@(ViewBag.FilterField == "Name")">Name (A-Z)</option>
                        <option value="Credits" selected="@(ViewBag.FilterField == "Credits")">Credits (Low-High)</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-2"></i>Apply
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Courses Grid -->
    <div class="card">
        <div class="card-header bg-light-blue">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Available Courses</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Course Code</th>
                                <th>Course Name</th>
                                <th>Credits</th>
                                <th>Description</th>
                                <th class="text-center">Actions</th>
                                <th class="text-center">Content</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary-blue">@course.CourseCode</strong>
                                        <br>
                                        <small class="text-muted">ID: @course.CourseID</small>
                                    </td>
                                    <td>
                                        <h6 class="mb-1">@course.CourseName</h6>
                                        @if (!string.IsNullOrEmpty(course.CourseDescription))
                                        {
                                            <small class="text-muted d-block" style="max-width: 200px;">
                                                @course.CourseDescription.Truncate(60)
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary fs-6">@course.CourseCredits</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(course.CourseDescription))
                                        {
                                            <span class="text-muted">@course.CourseDescription.Truncate(80)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No description</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@course.CourseID"
                                               class="btn btn-outline-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@course.CourseID"
                                                   class="btn btn-outline-primary" title="Edit Course">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@course.CourseID"
                                                   class="btn btn-outline-danger" title="Delete Course">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="ContentList" asp-route-id="@course.CourseID"
                                           class="btn btn-outline-success btn-sm" title="Course Content">
                                            <i class="fas fa-folder-open me-1"></i>Content
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Quick Stats -->
                <div class="row mt-4 text-center">
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h3 class="text-primary-blue mb-0">@Model.Count()</h3>
                                <p class="mb-0 text-muted">Total Courses</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h3 class="text-success mb-0">@Model.Sum(c => c.CourseCredits)</h3>
                                <p class="mb-0 text-muted">Total Credits</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h3 class="text-info mb-0">@Model.Count(c => !string.IsNullOrEmpty(c.CourseDescription))</h3>
                                <p class="mb-0 text-muted">Courses with Description</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h3 class="text-warning mb-0">@Model.Count(c => c.Assignments?.Count > 0)</h3>
                                <p class="mb-0 text-muted">Courses with Assignments</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-book-open fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Courses Available</h4>
                    <p class="text-muted mb-4">There are no courses in the system yet.</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus-circle me-2"></i>Create First Course
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>