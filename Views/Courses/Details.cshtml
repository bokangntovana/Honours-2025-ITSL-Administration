@model ITSL_Administration.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="form-header">
            <i class="fas fa-book-open me-2"></i>Course Details
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
    <br>
    <div class="mt-4">
        <h4>Course Materials</h4>
        <!-- Add links to course content files here -->
        <a asp-controller="Courses" asp-action="ContentList" asp-route-id="@Model.CourseID"
           class="btn btn-outline-primary">
            <i class="fas fa-folder-open me-2"></i>View Course Content
        </a>
    </div>

    <div class="form-card p-4">
        <div class="row">
            <div class="col-md-6">
                <dl class="row details-list">


                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.CourseCode)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseCode)</dd>

                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.CourseName)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseName)</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.CourseCredits)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseCredits)</dd>

                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.CourseDescription)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseDescription)</dd>
                </dl>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Edit" asp-route-id="@Model.CourseID" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a class="btn btn-danger" asp-controller="Grades" asp-action="ExportParticipantReport" asp-route-courseId="@Model.CourseID" asp-route-studentId="@User.Identity.Name">
                <i class="fas fa-file-pdf"></i> Download My Academic Record
            </a>
            <a asp-controller="Grades" asp-action="ExportGradebookPdf" asp-route-courseId="@Model.CourseID" class="btn btn-primary">
                <i class="fas fa-file-pdf"></i> Export Gradebook
            </a>

            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-list me-2"></i>View All Courses
            </a>
            @if (User.IsInRole("Admin") || User.IsInRole("Lecturer"))
            {
                <a asp-controller="Assignment" asp-action="ManageAssignment" asp-route-courseId="@Model.CourseID" class="btn btn-primary">Manage Assignments</a>
            }
            else
            {
                <a asp-controller="Assignment" asp-action="ManageAssignment" asp-route-courseId="@Model.CourseID" class="btn btn-primary">View Assignments</a>
            }
            -
        </div>
        @if (User.IsInRole("Lecturer") || User.IsInRole("Admin"))
        {
            <div class="mt-3">
                <a href="@Url.Action("ManageEnrollments", "Enrollment", new { courseId = Model.CourseID })"
                   class="btn btn-primary">
                    <i class="fas fa-users"></i> Manage Course Enrollments
                </a>
            </div>
        }
    </div>
</div>