@model ITSL_Administration.Models.Courses

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="form-header">
            <i class="fas fa-book-open me-2"></i>Course Details
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="form-card p-4">
        <div class="row">
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.CourseID)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseID)</dd>

                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.CourseCode)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseCode)</dd>

                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.CourseName)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseName)</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.CourseCredits)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseCredits)</dd>

                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.CourseDescription)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseDescription)</dd>
                </dl>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Edit" asp-route-id="@Model.CourseID" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-list me-2"></i>View All Courses
            </a>
        </div>
    </div>
</div>