@model ITSL_Administration.Models.Course
@{
    ViewData["Title"] = "Create Course - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-controller="Courses" asp-action="Index">Courses</a>
    </li>
    <li class="breadcrumb-item active">Create Course</li>
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary-blue text-white">
            <h4 class="mb-0"><i class="fas fa-book-open me-2"></i>Create Course - ITSL Administration</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CourseCode" class="form-label fw-bold">Course Code</label>
                            <input asp-for="CourseCode" class="form-control" placeholder="e.g., CS101, MATH202" />
                            <span asp-validation-for="CourseCode" class="text-danger small"></span>
                            <small class="form-text text-muted">Unique identifier for the course</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourseName" class="form-label fw-bold">Course Name</label>
                            <input asp-for="CourseName" class="form-control" placeholder="Enter full course name" />
                            <span asp-validation-for="CourseName" class="text-danger small"></span>
                            <small class="form-text text-muted">Full descriptive name of the course</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CourseCredits" class="form-label fw-bold">Course Credits</label>
                            <input asp-for="CourseCredits" class="form-control" placeholder="e.g., 3, 4, 6" />
                            <span asp-validation-for="CourseCredits" class="text-danger small"></span>
                            <small class="form-text text-muted">Number of credits this course carries</small>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="CourseDescription" class="form-label fw-bold">Course Description</label>
                    <textarea asp-for="CourseDescription" class="form-control" rows="4"
                              placeholder="Provide a detailed description of the course content, objectives, and learning outcomes..."></textarea>
                    <span asp-validation-for="CourseDescription" class="text-danger small"></span>
                    <small class="form-text text-muted">Describe what students will learn in this course</small>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Create Course
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}