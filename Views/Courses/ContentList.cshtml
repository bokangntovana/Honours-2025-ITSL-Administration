@model ITSL_Administration.Models.Course

@{
    ViewData["Title"] = "Course Content List- " + Model.CourseName;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.CourseName - Content</h2>
        <a asp-action="UploadContent" asp-route-id="@Model.CourseID"
           class="btn btn-primary">
            <i class="fas fa-upload"></i> Upload New Content
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Uploaded On</th>
                <th>File Name</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Contents != null && Model.Contents.Any())
            {
                @foreach (var content in Model.Contents.OrderByDescending(c => c.UploadDate))
                {
                    <tr>
                        <td>@content.Title</td>
                        <td>@content.Description</td>
                        <td>@content.UploadDate.ToString("dd MMM yyyy")</td>
                        <td>@content.File?.FileName</td>
                        <td class="text-end">
                            <a asp-action="DownloadContent" asp-route-id="@content.Id"
                               class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-download"></i> Download
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        No content available for this course.
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Courses
        </a>
    </div>
</div>
