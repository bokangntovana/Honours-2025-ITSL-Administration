@model ITSL_Administration.Models.Course
@{
    ViewData["Title"] = "Delete Course - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-controller="Courses" asp-action="Index">Courses</a>
    </li>
    <li class="breadcrumb-item">
        <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseID">@Model.CourseName</a>
    </li>
    <li class="breadcrumb-item active">Delete Course</li>
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Course - ITSL Administration</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading"><i class="fas fa-warning me-2"></i>Irreversible Action</h5>
                <p class="mb-0"><strong>This action cannot be undone.</strong> The following course and all associated data will be permanently deleted:</p>
                <ul class="mt-2 mb-0">
                    <li>Course information and description</li>
                    <li>All course materials and content files</li>
                    <li>All assignments and their submissions</li>
                    <li>All grades and student records</li>
                    <li>All enrollment records</li>
                </ul>
            </div>

            <h5 class="text-primary-blue mb-3">Course Details</h5>
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Course ID:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.CourseID</dd>

                        <dt class="col-sm-4 text-muted">Course Code:</dt>
                        <dd class="col-sm-8">@Model.CourseCode</dd>

                        <dt class="col-sm-4 text-muted">Course Name:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.CourseName</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Credits:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.CourseCredits</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">Assignments:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@(Model.Assignments?.Count ?? 0)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">Materials:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">@(Model.Contents?.Count ?? 0)</span>
                        </dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.CourseDescription))
            {
                <div class="mt-3">
                    <h6 class="text-muted">Course Description:</h6>
                    <div class="border p-3 rounded bg-light">
                        @Model.CourseDescription
                    </div>
                </div>
            }

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="CourseID" />
                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <a asp-action="Details" asp-route-id="@Model.CourseID" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-danger" id="deleteButton">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButton = document.getElementById('deleteButton');

            deleteButton.addEventListener('click', function(e) {
                if (!confirm('⚠️ FINAL WARNING: Are you absolutely sure you want to delete this course? This will permanently remove all course data including assignments, submissions, grades, and materials. This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}