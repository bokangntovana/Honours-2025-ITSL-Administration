@model IEnumerable<ITSL_Administration.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturers";
}

<div class="container mt-4">
    <div class="index-header">
        <h2 class="form-header">
            <i class="fas fa-chalkboard-teacher me-2"></i>Lecturers
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Create New
        </a>
    </div>

    <div class="index-card">
        <div class="table-responsive">
            <table class="table index-table">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.LecturerID)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Surname)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.LecturerID)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td class="text-end action-buttons">
                                <a asp-action="Details" asp-route-id="@item.LecturerID" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.LecturerID" class="btn btn-sm btn-outline-success mx-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.LecturerID" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>