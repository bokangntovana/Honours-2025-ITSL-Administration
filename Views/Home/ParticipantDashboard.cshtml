@model ITSL_Administration.ViewModels.ParticipantDashboardViewModel
@{
    ViewData["Title"] = "My Learning Dashboard";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="index-header mb-4">
        <div>
            <h1 class="display-6 text-primary-blue mb-1">
                <i class="fas fa-user-graduate me-2"></i>My Learning Dashboard
            </h1>
            <p class="text-muted mb-0">Welcome back! Track your progress and stay on top of your assignments.</p>
        </div>
        <div class="btn-group">
            <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-book me-2"></i>Browse Courses
            </a>
            <a asp-controller="Assignment" asp-action="Index" class="btn btn-outline-success">
                <i class="fas fa-tasks me-2"></i>View Assignments
            </a>
        </div>
    </div>

    <!-- Success Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Overview Cards -->
    <div class="row mb-4">
        <!-- Overall Progress -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-primary text-uppercase mb-1">Overall Progress</h6>
                            <h2 class="mb-0 text-dark">@Model.CurrentProgress.ToString("F1")%</h2>
                            <small class="text-muted">@Model.CompletedAssignments of @Model.TotalAssignments assignments</small>
                        </div>
                        <div class="icon-wrapper bg-primary rounded-circle">
                            <i class="fas fa-tasks fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="progress mt-3" style="height: 8px;">
                        <div class="progress-bar bg-primary" role="progressbar"
                             style="width: @Model.CurrentProgress%;"
                             aria-valuenow="@Model.CurrentProgress" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Average Grade -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-info text-uppercase mb-1">Average Grade</h6>
                            <h2 class="mb-0 text-dark">@Model.AverageGrade.ToString("F1")%</h2>
                            <small class="text-muted">@Model.GradedAssignments assignments graded</small>
                        </div>
                        <div class="icon-wrapper bg-info rounded-circle">
                            <i class="fas fa-chart-line fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-@(Model.AverageGrade >= 50 ? "success" : "warning") fs-6">
                            @Model.PerformanceStatus
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assignment Status -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-warning text-uppercase mb-1">Assignments</h6>
                            <h2 class="mb-0 text-dark">@Model.PendingAssignments</h2>
                            <small class="text-muted">Pending submissions</small>
                        </div>
                        <div class="icon-wrapper bg-warning rounded-circle">
                            <i class="fas fa-clipboard-list fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <small class="text-danger">
                            <i class="fas fa-exclamation-circle me-1"></i>
                            @Model.OverdueAssignments overdue
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Deadlines -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-danger text-uppercase mb-1">Upcoming Deadlines</h6>
                            <h2 class="mb-0 text-dark">@Model.UpcomingDeadlines</h2>
                            <small class="text-muted">Next 14 days</small>
                        </div>
                        <div class="icon-wrapper bg-danger rounded-circle">
                            <i class="fas fa-calendar-alt fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            @Model.RecentSubmissions submitted this week
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row">
        <!-- Left Column - Progress & Deadlines -->
        <div class="col-lg-8">
            <!-- Course Progress -->
            <div class="form-card mb-4">
                <h4 class="form-header">
                    <i class="fas fa-list-alt me-2"></i>Course Progress
                </h4>
                <div class="table-responsive">
                    <table class="table table-hover index-table">
                        <thead>
                            <tr>
                                <th>Course</th>
                                <th>Progress</th>
                                <th>Assignments</th>
                                <th>Completed</th>
                                <th>Average Grade</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.CourseProgresses)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@course.CourseCode</div>
                                        <small class="text-muted">@course.CourseName</small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="progress flex-grow-1 me-2" style="height: 6px;">
                                                <div class="progress-bar bg-success" role="progressbar"
                                                     style="width: @course.ProgressPercentage%;"
                                                     aria-valuenow="@course.ProgressPercentage" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                            <small class="text-muted">@course.ProgressPercentage.ToString("F0")%</small>
                                        </div>
                                    </td>
                                    <td>@course.TotalAssignments</td>
                                    <td>@course.CompletedAssignments</td>
                                    <td>
                                        @if (course.GradedAssignments > 0)
                                        {
                                            <span class="badge bg-@(course.AverageGrade >= 50 ? "success" : "warning")">
                                                @course.AverageGrade.ToString("F1")%
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = course.Status switch
                                            {
                                                "On Track" => "success",
                                                "Good Progress" => "info",
                                                "Needs Attention" => "warning",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@course.Status</span>
                                    </td>
                                    <td class="text-end action-buttons">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.CourseId"
                                               class="btn btn-outline-primary" title="View Course">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-controller="Courses" asp-action="ContentList" asp-route-id="@course.CourseId"
                                               class="btn btn-outline-info" title="Course Content">
                                                <i class="fas fa-book-open"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="form-card">
                <h4 class="form-header">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h4>
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-primary btn-block text-start h-100">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-book fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-1">Browse Courses</h6>
                                    <small class="text-muted">Explore available courses</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Assignment" asp-action="ManageAssignment" class="btn btn-outline-success btn-block text-start h-100">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-tasks fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-1">View Assignments</h6>
                                    <small class="text-muted">Check all assignments</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Grades" asp-action="ParticipantGrades" class="btn btn-outline-info btn-block text-start h-100">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-chart-bar fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-1">My Grades</h6>
                                    <small class="text-muted">View all grades</small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Deadlines & Recent Activity -->
        <div class="col-lg-4">
            <!-- Upcoming Deadlines -->
            <div class="form-card mb-4">
                <h4 class="form-header">
                    <i class="fas fa-calendar-day me-2"></i>Upcoming Deadlines
                    <span class="badge bg-danger ms-2">@Model.NextDeadlines.Count</span>
                </h4>
                @if (Model.NextDeadlines.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var deadline in Model.NextDeadlines)
                        {
                            <div class="list-group-item px-0 border-0 mb-2">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 text-dark">@deadline.AssignmentTitle</h6>
                                        <small class="text-muted d-block">@deadline.CourseName</small>
                                        <small class="@(deadline.DaysUntilDue <= 3 ? "text-danger" : "text-warning") fw-bold">
                                            <i class="fas fa-clock me-1"></i>
                                            Due in @deadline.DaysUntilDue day@(deadline.DaysUntilDue != 1 ? "s" : "")
                                        </small>
                                    </div>
                                    <a asp-controller="Assignment" asp-action="Details" asp-route-id="@deadline.AssignmentId"
                                       class="btn btn-sm @(deadline.DaysUntilDue <= 3 ? "btn-danger" : "btn-warning") ms-2">
                                        @(deadline.IsSubmitted ? "View" : "Submit")
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h6 class="text-success">All Caught Up!</h6>
                        <p class="text-muted mb-0">No upcoming deadlines</p>
                    </div>
                }
            </div>

            <!-- Recent Grades -->
            <div class="form-card">
                <h4 class="form-header">
                    <i class="fas fa-chart-bar me-2"></i>Recent Grades
                    <span class="badge bg-primary ms-2">@Model.RecentGrades.Count</span>
                </h4>
                @if (Model.RecentGrades.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var grade in Model.RecentGrades)
                        {
                            <div class="list-group-item px-0 border-0 mb-2">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 text-dark">@grade.AssignmentTitle</h6>
                                        <small class="text-muted d-block">@grade.CourseName</small>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            @grade.GradeDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-@(grade.HasPassed ? "success" : "danger") fs-6">
                                            @grade.Grade.ToString("F1")%
                                        </span>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(grade.Feedback) && grade.Feedback != "No feedback provided")
                                {
                                    <div class="mt-2 p-2 bg-light rounded">
                                        <small class="text-muted">
                                            <i class="fas fa-comment me-1"></i>
                                            @grade.Feedback
                                        </small>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">No Grades Yet</h6>
                        <p class="text-muted mb-0">Submit assignments to see grades</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effects to dashboard cards
            const cards = document.querySelectorAll('.dashboard-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Add progress bar animation
            const progressBars = document.querySelectorAll('.progress-bar');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = width;
                    bar.style.transition = 'width 1s ease-in-out';
                }, 100);
            });
        });
    </script>
}