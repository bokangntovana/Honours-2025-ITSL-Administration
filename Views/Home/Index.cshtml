@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = "Welcome to ITSL Administration";
}

<div class="container-fluid">
    <!-- Public Welcome Section (shown to non-authenticated users) -->
    @if (!SignInManager.IsSignedIn(User))
    {
        <div class="row justify-content-center align-items-center min-vh-80">
            <div class="col-lg-6 col-md-8 text-center">
                <div class="form-card border-0 shadow">
                    <div class="text-center mb-4">
                        <div class="icon-wrapper bg-primary-blue rounded-circle mx-auto mb-3" style="width: 100px; height: 100px;">
                            <i class="fas fa-university fa-3x text-white"></i>
                        </div>
                        <h1 class="display-5 text-primary-blue mb-3">
                            ITSL Administration
                        </h1>
                        <p class="lead text-muted mb-4">
                            Welcome to the ITSL Learning Management System. Access your personalized learning dashboard and manage your academic journey.
                        </p>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Login to Dashboard
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </a>
                        </div>
                    </div>

                    <div class="mt-4 pt-4 border-top">
                        <div class="row text-center">
                            <div class="col-md-4 mb-3">
                                <i class="fas fa-graduation-cap fa-2x text-primary-blue mb-2"></i>
                                <h6>Interactive Learning</h6>
                                <small class="text-muted">Engage with course materials</small>
                            </div>
                            <div class="col-md-4 mb-3">
                                <i class="fas fa-tasks fa-2x text-success mb-2"></i>
                                <h6>Assignment Management</h6>
                                <small class="text-muted">Submit and track work</small>
                            </div>
                            <div class="col-md-4 mb-3">
                                <i class="fas fa-chart-line fa-2x text-info mb-2"></i>
                                <h6>Progress Tracking</h6>
                                <small class="text-muted">Monitor your growth</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Authenticated User Dashboard Navigation -->
        <div class="index-header mb-4">
            <div>
                <h1 class="display-6 text-primary-blue mb-1">
                    <i class="fas fa-tachometer-alt me-2"></i>Welcome, @User.Identity?.Name!
                </h1>
                <p class="text-muted mb-0">Choose your dashboard to get started with your tasks</p>
            </div>
            <div class="btn-group">
                <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-book me-2"></i>Browse Courses
                </a>
                <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-info">
                    <i class="fas fa-user me-2"></i>My Profile
                </a>
            </div>
        </div>

        <!-- Success Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Dashboard Selection Cards -->
        <div class="row g-4 mb-5">
            <!-- Admin Dashboard Card -->
            @if (User.IsInRole("Admin"))
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card dashboard-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper bg-primary-blue rounded-circle mx-auto mb-3">
                                <i class="fas fa-user-shield fa-2x text-white"></i>
                            </div>
                            <h5 class="card-title text-primary-blue mb-2">Admin Dashboard</h5>
                            <p class="card-text text-muted small mb-3">
                                Comprehensive system management, user administration, and institutional oversight tools.
                            </p>
                            <div class="mt-3">
                                <span class="badge bg-primary me-1">Users</span>
                                <span class="badge bg-success me-1">Courses</span>
                                <span class="badge bg-info">Analytics</span>
                            </div>
                            <a asp-controller="Home" asp-action="AdminDashboard" class="btn btn-primary mt-3 w-100">
                                <i class="fas fa-arrow-right me-2"></i>Access Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- Lecturer Dashboard Card -->
            @if (User.IsInRole("Lecturer"))
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card dashboard-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper bg-success rounded-circle mx-auto mb-3">
                                <i class="fas fa-chalkboard-teacher fa-2x text-white"></i>
                            </div>
                            <h5 class="card-title text-success mb-2">Lecturer Dashboard</h5>
                            <p class="card-text text-muted small mb-3">
                                Course management, assignment creation, student progress tracking, and academic oversight.
                            </p>
                            <div class="mt-3">
                                <span class="badge bg-success me-1">Courses</span>
                                <span class="badge bg-warning me-1">Assignments</span>
                                <span class="badge bg-info">Grading</span>
                            </div>
                            <a asp-controller="Home" asp-action="LecturerDashboard" class="btn btn-success mt-3 w-100">
                                <i class="fas fa-arrow-right me-2"></i>Access Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- Tutor Dashboard Card -->
            @if (User.IsInRole("Tutor"))
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card dashboard-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper bg-info rounded-circle mx-auto mb-3">
                                <i class="fas fa-user-tie fa-2x text-white"></i>
                            </div>
                            <h5 class="card-title text-info mb-2">Tutor Dashboard</h5>
                            <p class="card-text text-muted small mb-3">
                                Assignment grading, student support, feedback provision, and learning assistance tools.
                            </p>
                            <div class="mt-3">
                                <span class="badge bg-warning me-1">Grading</span>
                                <span class="badge bg-success me-1">Support</span>
                                <span class="badge bg-primary">Feedback</span>
                            </div>
                            <a asp-controller="Home" asp-action="TutorDashboard" class="btn btn-info mt-3 w-100 text-white">
                                <i class="fas fa-arrow-right me-2"></i>Access Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- Participant Dashboard Card -->
            @if (User.IsInRole("Participant"))
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card dashboard-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper bg-warning rounded-circle mx-auto mb-3">
                                <i class="fas fa-user-graduate fa-2x text-white"></i>
                            </div>
                            <h5 class="card-title text-warning mb-2">Learning Dashboard</h5>
                            <p class="card-text text-muted small mb-3">
                                Course access, assignment submission, grade tracking, and personalized learning progress.
                            </p>
                            <div class="mt-3">
                                <span class="badge bg-primary me-1">Courses</span>
                                <span class="badge bg-success me-1">Assignments</span>
                                <span class="badge bg-info">Progress</span>
                            </div>
                            <a asp-controller="Home" asp-action="ParticipantDashboard" class="btn btn-warning mt-3 w-100 text-dark">
                                <i class="fas fa-arrow-right me-2"></i>Access Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Quick Access Section -->
        <div class="form-card">
            <h4 class="form-header">
                <i class="fas fa-rocket me-2"></i>Quick Access
            </h4>
            <div class="row g-3">
                <!-- Courses -->
                <div class="col-md-3 col-6">
                    <a asp-controller="Courses" asp-action="Index" class="text-decoration-none">
                        <div class="text-center p-4 border rounded hover-shadow h-100">
                            <div class="icon-wrapper bg-primary-blue rounded-circle mx-auto mb-3">
                                <i class="fas fa-book-open fa-2x text-white"></i>
                            </div>
                            <h6 class="mb-2 text-dark">Browse Courses</h6>
                            <small class="text-muted">Access all available courses and materials</small>
                        </div>
                    </a>
                </div>

                <!-- Quizzes -->
                <div class="col-md-3 col-6">
                    <a asp-controller="Quiz" asp-action="AvailableQuiz" class="text-decoration-none">
                        <div class="text-center p-4 border rounded hover-shadow h-100">
                            <div class="icon-wrapper bg-info rounded-circle mx-auto mb-3">
                                <i class="fas fa-file-alt fa-2x text-white"></i>
                            </div>
                            <h6 class="mb-2 text-dark">Quizzes</h6>
                            <small class="text-muted">Take available quizzes and tests</small>
                        </div>
                    </a>
                </div>

                <!-- Calendar -->
                <div class="col-md-3 col-6">
                    <a asp-controller="EventSchedules" asp-action="Index" class="text-decoration-none">
                        <div class="text-center p-4 border rounded hover-shadow h-100">
                            <div class="icon-wrapper bg-warning rounded-circle mx-auto mb-3">
                                <i class="fas fa-calendar-alt fa-2x text-white"></i>
                            </div>
                            <h6 class="mb-2 text-dark">Calendar</h6>
                            <small class="text-muted">View classes and events schedule</small>
                        </div>
                    </a>
                </div>
                <!--Grades-->
                @if(User.IsInRole(""))
                {

                    <div class="col-md-3 col-6">
                        <a asp-controller="Grades" asp-action="ParticipantGrades" class="text-decoration-none">
                            <div class="text-center p-4 border rounded hover-shadow h-100">
                                <div class="icon-wrapper bg-primary rounded-circle mx-auto mb-3">
                                    <i class="fas fa-chart-bar fa-2x text-white"></i>
                                </div>
                                <h6 class="mb-2 text-dark">My Grades</h6>
                                <small class="text-muted">View your grades and progress</small>
                            </div>
                        </a>
                    </div>
                }

                <!-- Profile -->
                <div class="col-md-3 col-6">
                    <a asp-controller="Account" asp-action="Profile" class="text-decoration-none">
                        <div class="text-center p-4 border rounded hover-shadow h-100">
                            <div class="icon-wrapper bg-secondary rounded-circle mx-auto mb-3">
                                <i class="fas fa-user fa-2x text-white"></i>
                            </div>
                            <h6 class="mb-2 text-dark">My Profile</h6>
                            <small class="text-muted">Update your personal information</small>
                        </div>
                    </a>
                </div>
@*
                <!-- Content Management -->
                @if (User.IsInRole("Admin") || User.IsInRole("Lecturer") || User.IsInRole("Tutor"))
                {
                    <div class="col-md-3 col-6">
                        <a asp-controller="Courses" asp-action="UploadContent" class="text-decoration-none">
                            <div class="text-center p-4 border rounded hover-shadow h-100">
                                <div class="icon-wrapper bg-danger rounded-circle mx-auto mb-3">
                                    <i class="fas fa-upload fa-2x text-white"></i>
                                </div>
                                <h6 class="mb-2 text-dark">Upload Content</h6>
                                <small class="text-muted">Add course materials and resources</small>
                            </div>
                        </a>
                    </div>
                } *@

                <!-- User Management -->
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-md-3 col-6">
                        <a asp-controller="Admin" asp-action="Index" class="text-decoration-none">
                            <div class="text-center p-4 border rounded hover-shadow h-100">
                                <div class="icon-wrapper bg-dark rounded-circle mx-auto mb-3">
                                    <i class="fas fa-users-cog fa-2x text-white"></i>
                                </div>
                                <h6 class="mb-2 text-dark">User Management</h6>
                                <small class="text-muted">Manage system users and roles</small>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effects to dashboard cards
            const cards = document.querySelectorAll('.dashboard-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.boxShadow = '0 8px 25px rgba(0,0,0,0.15)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '';
                });
            });

            // Add hover effects to quick access items
            const quickAccessItems = document.querySelectorAll('.hover-shadow');
            quickAccessItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                    this.style.boxShadow = '0 4px 8px rgba(0,0,0,0.15)';
                });
                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '';
                });
            });

            // Track dashboard selection
            const dashboardLinks = document.querySelectorAll('a[href*="Dashboard"]');
            dashboardLinks.forEach(link => {
                link.addEventListener('click', function() {
                    const dashboardType = this.querySelector('.card-title').textContent;
                    console.log(`User accessing: ${dashboardType}`);
                });
            });
        });
    </script>
}