@model ITSL_Administration.ViewModels.LecturerDashboardViewModel
@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="index-header mb-4">
        <div>
            <h1 class="display-6 text-primary-blue mb-1">
                <i class="fas fa-chalkboard-teacher me-2"></i>Lecturer Dashboard
            </h1>
            <p class="text-muted mb-0">Teaching overview, assignment management, and grading progress</p>
        </div>
        <div class="btn-group">
            <a asp-controller="Assignment" asp-action="Create" class="btn btn-outline-primary">
                <i class="fas fa-plus me-2"></i>Create Assignment
            </a>
            <a asp-controller="Courses" asp-action="UploadContent" class="btn btn-outline-success">
                <i class="fas fa-upload me-2"></i>Upload Content
            </a>
        </div>
    </div>

    <!-- Success Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Main Statistics Cards -->
    <div class="row mb-4">
        <!-- Teaching Team -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-primary text-uppercase mb-1">Teaching Team</h6>
                            <h2 class="mb-0 text-dark">@Model.TutorCount</h2>
                            <small class="text-muted">Active tutors</small>
                        </div>
                        <div class="icon-wrapper bg-primary rounded-circle">
                            <i class="fas fa-user-tie fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <h5 class="text-info mb-0">@Model.ParticipantCount</h5>
                        <small class="text-muted">Participants</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Academic Content -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-success text-uppercase mb-1">Academic Content</h6>
                            <h2 class="mb-0 text-dark">@Model.CourseCount</h2>
                            <small class="text-muted">Active courses</small>
                        </div>
                        <div class="icon-wrapper bg-success rounded-circle">
                            <i class="fas fa-book fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <h5 class="text-warning mb-0">@Model.TotalCourseContent</h5>
                        <small class="text-muted">Content items</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assignment Overview -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-info text-uppercase mb-1">Assignment Overview</h6>
                            <h2 class="mb-0 text-dark">@Model.TotalAssignments</h2>
                            <small class="text-muted">Total assignments</small>
                        </div>
                        <div class="icon-wrapper bg-info rounded-circle">
                            <i class="fas fa-tasks fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <small class="text-success">
                            <i class="fas fa-paper-plane me-1"></i>
                            @Model.SubmittedAssignmentsCount submitted
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grading Status -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-warning text-uppercase mb-1">Grading Status</h6>
                            <h2 class="mb-0 text-dark">@Model.PendingGradingCount</h2>
                            <small class="text-muted">Pending grading</small>
                        </div>
                        <div class="icon-wrapper bg-warning rounded-circle">
                            <i class="fas fa-clock fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <h5 class="text-danger mb-0">@Model.OverdueAssignmentsCount</h5>
                        <small class="text-muted">Overdue assignments</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Statistics & Actions -->
    <div class="row">
        <!-- Left Column - Assignment Management -->
        <div class="col-lg-8">
            <!-- Assignment Types Breakdown -->
            <div class="form-card mb-4">
                <h4 class="form-header">
                    <i class="fas fa-chart-pie me-2"></i>Assignment Types Distribution
                </h4>
                <div class="row">
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table table-hover index-table">
                                <thead>
                                    <tr>
                                        <th>Assignment Type</th>
                                        <th class="text-end">Count</th>
                                        <th class="text-end">Percentage</th>
                                        <th class="text-end">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var totalAssignments = Model.TotalAssignments;
                                        var assignmentTypes = new[]
                                        {
                                                                        new { Name = "Written Assignments", Count = Model.WrittenAssignmentsCount, Color = "primary", Icon = "file-alt" },
                                                                        new { Name = "Projects", Count = Model.ProjectAssignmentsCount, Color = "success", Icon = "project-diagram" },
                                                                        new { Name = "Quizzes", Count = Model.QuizAssignmentsCount, Color = "info", Icon = "question-circle" },
                                                                        new { Name = "Examinations", Count = Model.ExaminationAssignmentsCount, Color = "warning", Icon = "file-signature" }
                                                                        };
                                    }
                                    @foreach (var type in assignmentTypes)
                                    {
                                        var percentage = totalAssignments > 0 ? (type.Count * 100.0 / totalAssignments) : 0;
                                        <tr>
                                            <td>
                                                <i class="fas fa-@type.Icon text-@type.Color me-2"></i>
                                                @type.Name
                                            </td>
                                            <td class="text-end fw-bold">@type.Count</td>
                                            <td class="text-end text-muted">@percentage.ToString("F1")%</td>
                                            <td class="text-end">
                                                <span class="badge bg-@type.Color">Active</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="mb-3">
                                <h5 class="text-primary">Performance Metrics</h5>
                                <h3 class="text-success">@Model.AverageGrade.ToString("F1")%</h3>
                                <small class="text-muted">Average Grade</small>
                            </div>
                            <div class="mb-3">
                                <h5 class="text-info">@Model.GradedParticipantsCount</h5>
                                <small class="text-muted">Participants Graded</small>
                            </div>
                            <div class="mb-3">
                                <h5 class="text-warning">@Model.RecentSubmissionsCount</h5>
                                <small class="text-muted">Submissions This Week</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Course-wise Assignment Breakdown -->
            <div class="form-card mb-4">
                <h4 class="form-header">
                    <i class="fas fa-list-alt me-2"></i>Course Assignment Overview
                </h4>
                @if (Model.CourseAssignmentCounts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover index-table">
                            <thead>
                                <tr>
                                    <th>Course</th>
                                    <th class="text-center">Assignments</th>
                                    <th class="text-center">Submitted</th>
                                    <th class="text-center">Graded</th>
                                    <th class="text-center">Pending</th>
                                    <th class="text-center">Progress</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model.CourseAssignmentCounts)
                                {
                                    var gradingProgress = course.SubmittedCount > 0 ? (course.GradedCount * 100.0 / course.SubmittedCount) : 0;
                                    <tr>
                                        <td>
                                            <div class="fw-bold">@course.CourseCode</div>
                                            <small class="text-muted">@course.CourseName</small>
                                        </td>
                                        <td class="text-center fw-bold">@course.AssignmentCount</td>
                                        <td class="text-center">
                                            <span class="text-info">@course.SubmittedCount</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="text-success">@course.GradedCount</span>
                                        </td>
                                        <td class="text-center">
                                            @if (course.PendingGradingCount > 0)
                                            {
                                                <span class="text-danger fw-bold">@course.PendingGradingCount</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@course.PendingGradingCount</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="progress" style="height: 8px; width: 80px; margin: 0 auto;">
                                                <div class="progress-bar bg-success" role="progressbar"
                                                     style="width: @gradingProgress%;"
                                                     aria-valuenow="@gradingProgress" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                            <small class="text-muted">@gradingProgress.ToString("F0")%</small>
                                        </td>
                                        <td class="text-end action-buttons">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Assignment" asp-action="ManageAssignment" asp-route-courseId="@course.CourseId"
                                                   class="btn btn-outline-primary" title="Manage Assignments">
                                                    <i class="fas fa-cog"></i>
                                                </a>
                                                <a asp-controller="Assignment" asp-action="ManageSubmissions"
                                                   asp-route-id="@course.CourseId" class="btn btn-outline-info" title="View Submissions">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">No Course Assignments</h6>
                        <p class="text-muted mb-3">No assignments found for your courses.</p>
                        <a asp-controller="Assignment" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Create First Assignment
                        </a>
                    </div>
                }
            </div>

            <!-- Quick Teaching Actions -->
            <div class="form-card">
                <h4 class="form-header">
                    <i class="fas fa-cogs me-2"></i>Teaching Management
                </h4>
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-controller="Assignment" asp-action="Create" class="btn btn-outline-primary btn-block text-start h-100">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-plus-circle fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-1">Create Assignment</h6>
                                    <small class="text-muted">New assignment</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Grades" asp-action="GradingOverview" class="btn btn-outline-success btn-block text-start h-100">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-clipboard-check fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-1">Grade Assignments</h6>
                                    <small class="text-muted">@Model.PendingGradingCount pending</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Courses" asp-action="UploadContent" class="btn btn-outline-info btn-block text-start h-100">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-upload fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-1">Upload Content</h6>
                                    <small class="text-muted">Course materials</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-warning btn-block text-start h-100">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-book-open fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-1">Manage Courses</h6>
                                    <small class="text-muted">Course administration</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Assignment" asp-action="Index" class="btn btn-outline-danger btn-block text-start h-100">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-tasks fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-1">All Assignments</h6>
                                    <small class="text-muted">View all assignments</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Grades" asp-action="Index" class="btn btn-outline-secondary btn-block text-start h-100">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-chart-bar fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-1">Grade Reports</h6>
                                    <small class="text-muted">View grade analytics</small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Quick Overview -->
        <div class="col-lg-4">
            <!-- Grading Priority -->
            <div class="form-card mb-4">
                <h4 class="form-header">
                    <i class="fas fa-exclamation-triangle me-2"></i>Grading Priority
                </h4>
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-0 border-0 mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1 text-dark">Pending Grading</h6>
                                <small class="text-muted">All courses</small>
                            </div>
                            <span class="badge bg-warning fs-6">@Model.PendingGradingCount</span>
                        </div>
                    </div>
                    <div class="list-group-item px-0 border-0 mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1 text-dark">Overdue Assignments</h6>
                                <small class="text-muted">Need attention</small>
                            </div>
                            <span class="badge bg-danger fs-6">@Model.OverdueAssignmentsCount</span>
                        </div>
                    </div>
                    <div class="list-group-item px-0 border-0 mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1 text-dark">Recent Submissions</h6>
                                <small class="text-muted">This week</small>
                            </div>
                            <span class="badge bg-info fs-6">@Model.RecentSubmissionsCount</span>
                        </div>
                    </div>
                    <div class="list-group-item px-0 border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1 text-dark">Upcoming Deadlines</h6>
                                <small class="text-muted">Next 7 days</small>
                            </div>
                            <span class="badge bg-primary fs-6">@Model.UpcomingDueAssignments</span>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a asp-controller="Grades" asp-action="GradingOverview" class="btn btn-warning btn-sm">
                        <i class="fas fa-play me-1"></i>Start Grading
                    </a>
                </div>
            </div>

            <!-- Performance Summary -->
            <div class="form-card">
                <h4 class="form-header">
                    <i class="fas fa-chart-line me-2"></i>Performance Summary
                </h4>
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="p-3 bg-light rounded">
                            <h4 class="text-success mb-0">@Model.AverageGrade.ToString("F1")%</h4>
                            <small class="text-muted">Avg Grade</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="p-3 bg-light rounded">
                            <h4 class="text-primary mb-0">@Model.GradedParticipantsCount</h4>
                            <small class="text-muted">Graded</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="p-3 bg-light rounded">
                            <h4 class="text-info mb-0">@Model.SubmittedAssignmentsCount</h4>
                            <small class="text-muted">Submitted</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="p-3 bg-light rounded">
                            <h4 class="text-warning mb-0">@Model.TotalAssignments</h4>
                            <small class="text-muted">Total</small>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a asp-controller="Grades" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-chart-bar me-1"></i>View Analytics
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effects to dashboard cards
            const cards = document.querySelectorAll('.dashboard-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Add animation to progress bars
            const progressBars = document.querySelectorAll('.progress-bar');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = width;
                    bar.style.transition = 'width 1s ease-in-out';
                }, 100);
            });

            // Priority alert for pending grading
            const pendingCount = @Model.PendingGradingCount;
            if (pendingCount > 0) {
                console.log(`You have ${pendingCount} assignments pending grading.`);
            }
        });
    </script>
}