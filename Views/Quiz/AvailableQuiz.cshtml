@model IEnumerable<ITSL_Administration.Models.Quiz>
@{
    ViewData["Title"] = "Available Quizzes - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item active">Available Quizzes</li>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary-blue">
            <i class="fas fa-list-ol me-2"></i>Available Quizzes - ITSL Administration
        </h2>
        @if (User.IsInRole("Lecturer") || User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Create New Quiz
            </a>
        }
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light-blue">
            <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Quizzes List</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Due Date</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Assignment.Title</td>
                                    <td>@(string.IsNullOrEmpty(item.Assignment.Description) ? "No description" : item.Assignment.Description)</td>
                                    <td>@item.Assignment.DueDate.ToString("g")</td>
                                    <td>
                                        <span class="badge @(item.Assignment.DueDate > DateTime.Now ? "bg-success" : "bg-secondary")">
                                            @(item.Assignment.DueDate > DateTime.Now ? "Active" : "Expired")
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="TakeQuiz" asp-route-quizId="@item.QuizID" class="btn btn-outline-primary" title="Take Quiz">
                                                <i class="fas fa-play"></i>
                                            </a>
                                            @if (User.IsInRole("Lecturer") || User.IsInRole("Admin"))
                                            {
                                                <a asp-action="EditQuiz" asp-route-id="@item.QuizID" class="btn btn-outline-info" title="Edit Quiz">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="DeleteQuiz" asp-route-id="@item.QuizID" class="btn btn-outline-danger" title="Delete Quiz">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i>No quizzes available</h5>
                    <p class="mb-0">No quizzes are available at this time.</p>
                </div>
            }
        </div>
    </div>
</div>