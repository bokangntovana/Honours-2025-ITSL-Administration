@model ITSL_Administration.Models.Quiz

@{
    ViewData["Title"] = "Create New Quiz";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Assignment.Title" class="form-label"></label>
                            <input asp-for="Assignment.Title" class="form-control" />
                            <span asp-validation-for="Assignment.Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Assignment.DueDate" class="form-label"></label>
                            <input asp-for="Assignment.DueDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="Assignment.DueDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                @*     <div class="form-group mb-3">
                        <label asp-for="Assignment.CourseId" class="form-label">Course</label>
                        <select asp-for="Assignment.CourseId" asp-items="ViewBag.Courses" class="form-control">
                            <option value="">-- Select Course --</option>
                            @if (ViewBag.Courses != null)
                            {
                                foreach (var item in ViewBag.Courses as SelectList)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Assignment.CourseId" class="text-danger"></span>
                    </div> *@
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Assignment.SetAssignmentMark" class="form-label"></label>
                            <input asp-for="Assignment.SetAssignmentMark" class="form-control" />
                            <span asp-validation-for="Assignment.SetAssignmentMark" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Assignment.Description" class="form-label"></label>
                    <textarea asp-for="Assignment.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Assignment.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create Quiz</button>
                    <a asp-action="AvailableQuiz" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}