@model ITSL_Administration.Models.QuizQuestion
@{
    ViewData["Title"] = "Add Question - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var quizId = ViewBag.QuizId as string ?? Model?.QuizId;
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-action="EditQuiz" asp-route-id="@quizId">Edit Quiz</a>
    </li>
    <li class="breadcrumb-item active">Add Question</li>
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary-blue text-white">
            <h4 class="mb-0"><i class="fas fa-question-circle me-2"></i>Add Question - ITSL Administration</h4>
        </div>
        <div class="card-body">
            <form asp-action="AddQuestion" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="QuestionID" />
                <input type="hidden" asp-for="QuizId" value="@quizId" />

                <div class="mb-4">
                    <label asp-for="QuestionText" class="form-label fw-bold">Question Text</label>
                    <textarea asp-for="QuestionText" class="form-control" rows="5" placeholder="Enter your question here"></textarea>
                    <span asp-validation-for="QuestionText" class="text-danger small"></span>
                    <div class="form-text">You'll be able to add options after creating the question.</div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <a asp-action="EditQuiz" asp-route-id="@quizId" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Create Question
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}