@model ITSL_Administration.Models.Quiz

@{
    ViewData["Title"] = "Edit Quiz";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-edit me-2"></i>@ViewData["Title"]
            </h3>
        </div>
        <div class="card-body">
            <form asp-action="EditQuiz" method="post" id="editQuizForm">
                <input type="hidden" asp-for="QuizID" />
                <input type="hidden" asp-for="Assignment.AssignmentID" />

                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Assignment.Title" class="form-label fw-bold"></label>
                            <input asp-for="Assignment.Title" class="form-control" />
                            <span asp-validation-for="Assignment.Title" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Assignment.DueDate" class="form-label fw-bold"></label>
                            <input asp-for="Assignment.DueDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="Assignment.DueDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Assignment.Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Assignment.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Assignment.Description" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Assignment.SetAssignmentMark" class="form-label fw-bold"></label>
                    <div class="input-group" style="max-width: 200px;">
                        <input asp-for="Assignment.SetAssignmentMark" class="form-control" />
                        <span class="input-group-text">points</span>
                    </div>
                    <span asp-validation-for="Assignment.SetAssignmentMark" class="text-danger small"></span>
                </div>

                <hr class="my-4" />

                <h4 class="mb-3">
                    <i class="fas fa-question-circle text-primary me-2"></i>Questions
                </h4>

                @if (Model.Questions != null && Model.Questions.Any())
                {
                    <div class="accordion mb-4" id="questionsAccordion">
                        @foreach (var question in Model.Questions)
                        {
                            <div class="accordion-item mb-2">
                                <h2 class="accordion-header" id="heading@(question.QuestionID)">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(question.QuestionID)" aria-expanded="false" aria-controls="collapse@(question.QuestionID)">
                                        @question.QuestionText
                                    </button>
                                </h2>
                                <div id="collapse@(question.QuestionID)" class="accordion-collapse collapse" aria-labelledby="heading@(question.QuestionID)" data-bs-parent="#questionsAccordion">
                                    <div class="accordion-body">
                                        <div class="d-flex justify-content-end mb-3">
                                            <a asp-action="EditQuestion" asp-route-id="@question.QuestionID" class="btn btn-sm btn-primary me-2">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger delete-question" data-id="@question.QuestionID">
                                                <i class="fas fa-trash-alt me-1"></i>Delete
                                            </button>
                                        </div>

                                        <h5 class="mb-3">Options</h5>
                                        <ul class="list-group">
                                            @foreach (var option in question.Options)
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center @(option.IsCorrect ? "list-group-item-success" : "")">
                                                    <div>
                                                        @option.OptionText
                                                        @if (option.IsCorrect)
                                                        {
                                                            <span class="badge bg-success ms-2">Correct</span>
                                                        }
                                                    </div>
                                                    <div>
                                                        <a asp-action="EditOption" asp-route-id="@option.OptionID" class="btn btn-sm btn-outline-primary me-1">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-sm btn-outline-danger delete-option" data-id="@option.OptionID">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                        <div class="mt-3">
                                            <a asp-action="AddOption" asp-route-questionId="@question.QuestionID" class="btn btn-sm btn-success">
                                                <i class="fas fa-plus me-1"></i>Add Option
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>No questions added yet.
                    </div>
                }

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="AddQuestion" asp-route-quizId="@Model.QuizID" class="btn btn-success">
                        <i class="fas fa-plus-circle me-2"></i>Add Question
                    </a>
                    <div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="AvailableQuiz" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function(){
            function getAntiForgeryToken() {
                var tokenInput = document.querySelector('#editQuizForm input[name="__RequestVerificationToken"]');
                return tokenInput ? tokenInput.value : null;
            }

            function postTo(actionUrl, data) {
                var form = document.createElement('form');
                form.method = 'post';
                form.action = actionUrl;
                form.style.display = 'none';

                // add antiforgery token
                var token = getAntiForgeryToken();
                if (token) {
                    var input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = '__RequestVerificationToken';
                    input.value = token;
                    form.appendChild(input);
                }

                for (var key in data) {
                    if (!data.hasOwnProperty(key)) continue;
                    var el = document.createElement('input');
                    el.type = 'hidden';
                    el.name = key;
                    el.value = data[key];
                    form.appendChild(el);
                }

                document.body.appendChild(form);
                form.submit();
            }

            document.addEventListener('DOMContentLoaded', function() {
                document.querySelectorAll('.delete-question').forEach(function(btn) {
                    btn.addEventListener('click', function(e){
                        var id = this.getAttribute('data-id');
                        if (!confirm('Delete this question?')) return;
                        postTo('@Url.Action("DeleteQuestion", "Quiz")', { id: id });
                    });
                });

                document.querySelectorAll('.delete-option').forEach(function(btn) {
                    btn.addEventListener('click', function(e){
                        var id = this.getAttribute('data-id');
                        if (!confirm('Delete this option?')) return;
                        postTo('@Url.Action("DeleteOption", "Quiz")', { id: id });
                    });
                });
            });
        })();
    </script>
}