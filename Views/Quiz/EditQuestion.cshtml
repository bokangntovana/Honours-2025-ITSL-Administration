@model ITSL_Administration.Models.QuizQuestion

@{
    ViewData["Title"] = "Edit Question";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-question-circle me-2"></i>@ViewData["Title"]
            </h3>
        </div>
        <div class="card-body">
            <form asp-action="EditQuestion" method="post" id="editQuestionForm">
                <input type="hidden" asp-for="QuestionID" />
                <input type="hidden" asp-for="QuizId" />
                @Html.AntiForgeryToken()
                <div class="form-group mb-4">
                    <label asp-for="QuestionText" class="form-label fw-bold">Question Text</label>
                    <textarea asp-for="QuestionText" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="QuestionText" class="text-danger small"></span>
                </div>

                <hr class="my-4" />

                <h4 class="mb-3">
                    <i class="fas fa-list-ul text-primary me-2"></i>Options
                </h4>

                @if (Model.Options != null && Model.Options.Any())
                {
                    <div class="list-group mb-4">
                        @foreach (var option in Model.Options)
                        {
                            <div class="list-group-item @(option.IsCorrect ? "list-group-item-success" : "")">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        @option.OptionText
                                        @if (option.IsCorrect)
                                        {
                                            <span class="badge bg-success ms-2">Correct</span>
                                        }
                                    </div>
                                    <div>
                                        <a asp-action="EditOption" asp-route-id="@option.OptionID" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger delete-option" data-id="@option.OptionID">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>No options added yet.
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <a asp-action="AddOption" asp-route-questionId="@Model.QuestionID" class="btn btn-success">
                        <i class="fas fa-plus-circle me-2"></i>Add Option
                    </a>
                    <div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-save me-2"></i>Save Question
                        </button>
                        <a asp-action="EditQuiz" asp-route-id="@Model.QuizId" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Quiz
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function(){
            function getAntiForgeryToken() {
                var tokenInput = document.querySelector('#editQuestionForm input[name="__RequestVerificationToken"]');
                return tokenInput ? tokenInput.value : null;
            }

            function postTo(actionUrl, data) {
                var form = document.createElement('form');
                form.method = 'post';
                form.action = actionUrl;
                form.style.display = 'none';

                // add antiforgery token
                var token = getAntiForgeryToken();
                if (token) {
                    var input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = '__RequestVerificationToken';
                    input.value = token;
                    form.appendChild(input);
                }

                for (var key in data) {
                    if (!data.hasOwnProperty(key)) continue;
                    var el = document.createElement('input');
                    el.type = 'hidden';
                    el.name = key;
                    el.value = data[key];
                    form.appendChild(el);
                }

                document.body.appendChild(form);
                form.submit();
            }

            document.addEventListener('DOMContentLoaded', function() {
                document.querySelectorAll('.delete-option').forEach(function(btn) {
                    btn.addEventListener('click', function(e){
                        var id = this.getAttribute('data-id');
                        if (!confirm('Delete this option?')) return;
                        postTo('@Url.Action("DeleteOption", "Quiz")', { id: id });
                    });
                });
            });
        })();
    </script>
}