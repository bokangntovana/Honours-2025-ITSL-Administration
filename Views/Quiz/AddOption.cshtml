@model ITSL_Administration.Models.QuizOption

@{
    ViewData["Title"] = "Add Option";
}

<h2>Add Option to Question</h2>

<form asp-action="AddOption" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="QuestionId" />
    <input type="hidden" asp-for="OptionID" />

    <div class="form-group">
        <label asp-for="OptionText" class="control-label"></label>
        <input asp-for="OptionText" class="form-control" />
        <span asp-validation-for="OptionText" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input class="form-check-input" asp-for="IsCorrect" />
        <label class="form-check-label" asp-for="IsCorrect">Correct Answer</label>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="EditQuestion" asp-route-id="@Model.QuestionId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
