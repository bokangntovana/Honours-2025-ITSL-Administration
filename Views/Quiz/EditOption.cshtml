@model ITSL_Administration.Models.QuizOption
@{
    ViewData["Title"] = "Edit Option - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-action="EditQuestion" asp-route-id="@Model.QuestionId">Edit Question</a>
    </li>
    <li class="breadcrumb-item active">Edit Option</li>
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary-blue text-white">
            <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Option - ITSL Administration</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditOption" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OptionID" />
                <input type="hidden" asp-for="QuestionId" />

                <div class="mb-3">
                    <label asp-for="OptionText" class="form-label fw-bold">Option Text</label>
                    <textarea asp-for="OptionText" class="form-control" rows="3" placeholder="Enter option text"></textarea>
                    <span asp-validation-for="OptionText" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IsCorrect" />
                        <label class="form-check-label fw-bold" asp-for="IsCorrect">Correct Answer</label>
                    </div>
                    <span class="form-text text-muted">Check this if this option is the correct answer</span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <a asp-action="EditQuestion" asp-route-id="@Model.QuestionId" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}