@model ITSL_Administration.Models.Quiz
@{
    ViewData["Title"] = "Delete Quiz - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-action="AvailableQuiz">Available Quizzes</a>
    </li>
    <li class="breadcrumb-item active">Delete Quiz</li>
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Quiz - ITSL Administration</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading"><i class="fas fa-warning me-2"></i>Warning!</h5>
                <p class="mb-0">You are about to permanently delete this quiz. This action cannot be undone.</p>
            </div>

            <h5 class="text-danger mb-3">Quiz Details</h5>
            <dl class="row">
                <dt class="col-sm-3 text-muted">Title:</dt>
                <dd class="col-sm-9">@Model.Assignment?.Title</dd>

                <dt class="col-sm-3 text-muted">Description:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Assignment?.Description) ? "No description" : Model.Assignment.Description)</dd>

                <dt class="col-sm-3 text-muted">Due Date:</dt>
                <dd class="col-sm-9">@Model.Assignment?.DueDate.ToString("dd MMMM yyyy HH:mm")</dd>

                <dt class="col-sm-3 text-muted">Questions:</dt>
                <dd class="col-sm-9">@(Model.Questions?.Count ?? 0)</dd>
            </dl>

            <form asp-action="DeleteQuiz" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="QuizID" />

                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <a asp-action="AvailableQuiz" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>