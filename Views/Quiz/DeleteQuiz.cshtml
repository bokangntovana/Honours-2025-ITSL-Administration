@model ITSL_Administration.Models.Quiz

@{
    ViewData["Title"] = "Delete Quiz";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
            </h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this quiz?</h4>
            <hr />

            <form asp-action="DeleteQuiz" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="QuizID" />

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                    <a asp-action="AvailableQuiz" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
