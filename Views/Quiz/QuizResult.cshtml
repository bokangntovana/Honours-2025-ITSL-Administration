@model Submission
@{
    ViewData["Title"] = "Quiz Results - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var safeAssignment = Model?.Assignment;
    var safeGrade = Model?.Grade;
    var percentage = safeGrade?.FinalMark ?? 0.0;
    var resultClass = (safeGrade?.HasPassed ?? false) ? "success" : "danger";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-controller="Quiz" asp-action="AvailableQuiz">Available Quizzes</a>
    </li>
    <li class="breadcrumb-item active">Quiz Results</li>
}

<div class="container mt-4">
    <div class="card border-@resultClass shadow-sm">
        <div class="card-header bg-@resultClass text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-poll me-2"></i>Quiz Results - ITSL Administration</h4>
                <span class="badge bg-light text-@resultClass fs-6">
                    @percentage.ToString("0.00")%
                </span>
            </div>
        </div>

        <div class="card-body">
            <div class="text-center mb-4">
                <h3 class="text-@resultClass">@safeAssignment?.Title</h3>
                <p class="text-muted"><i class="fas fa-book me-2"></i>@safeAssignment?.Course?.CourseName</p>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="card h-100">
                        <div class="card-header bg-light-blue">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Details</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-muted">Submitted:</dt>
                                <dd class="col-sm-7">@Model?.DateSubmitted.ToString("dd MMM yyyy 'at' HH:mm")</dd>

                                <dt class="col-sm-5 text-muted">Graded By:</dt>
                                <dd class="col-sm-7">@safeGrade?.MarkedBy</dd>

                                <dt class="col-sm-5 text-muted">Graded On:</dt>
                                <dd class="col-sm-7">@(safeGrade?.DateRecorded.ToString("dd MMM yyyy 'at' HH:mm"))</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light-blue">
                            <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Performance</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <div class="display-4 text-@resultClass">
                                    @percentage.ToString("0")%
                                </div>
                            </div>

                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-muted">Score:</dt>
                                <dd class="col-sm-7"><strong>@percentage.ToString("0.00")%</strong></dd>

                                <dt class="col-sm-5 text-muted">Status:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-@resultClass">
                                        @(safeGrade?.HasPassed == true ? "PASSED" : "FAILED")
                                    </span>
                                </dd>

                                <dt class="col-sm-5 text-muted">Passing Score:</dt>
                                <dd class="col-sm-7"><strong>50%</strong></dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-light-blue">
                    <h5 class="mb-0"><i class="fas fa-comment-dots me-2"></i>Feedback</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(safeGrade?.GradesFeedback))
                    {
                        <div class="alert alert-@resultClass mb-0">
                            <i class="fas @(safeGrade?.HasPassed == true ? "fa-check-circle" : "fa-exclamation-circle") me-2"></i>
                            @safeGrade?.GradesFeedback
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            No feedback provided for this quiz.
                        </div>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4 pt-3 border-top">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                    <i class="fas fa-home me-2"></i>Dashboard
                </a>
                <a asp-controller="Quiz" asp-action="AvailableQuiz" class="btn btn-outline-secondary">
                    <i class="fas fa-list me-2"></i>Back to Quizzes
                </a>
            </div>
        </div>
    </div>
</div>