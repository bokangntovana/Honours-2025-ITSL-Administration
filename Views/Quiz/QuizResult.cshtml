@model Submission

@{
    ViewData["Title"] = "Quiz Results";

    var safeAssignment = Model?.Assignment;
    var safeGrade = Model?.Grade;

    // AssignmentMark now directly stores percentage (0–100)
    var percentage = safeGrade?.AssignmentMark ?? 0.0;

    var resultClass = (safeGrade?.HasPassed ?? false) ? "success" : "danger";
}

<div class="container mt-4">
    <div class="card border-@resultClass">
        <div class="card-header bg-@resultClass text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h4 mb-0"><i class="fas fa-poll me-2"></i>Quiz Results</h2>
                <span class="badge bg-light text-@resultClass fs-6">
                    @percentage.ToString("0.00")%
                </span>
            </div>
        </div>

        <div class="card-body">
            <div class="text-center mb-4">
                <h3 class="text-@resultClass">@safeAssignment?.Title</h3>
                <p class="text-muted"><i class="fas fa-book me-2"></i>@safeAssignment?.Course?.CourseName</p>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Details</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-calendar-check me-2"></i>Submitted</span>
                                    <span>@Model?.DateSubmitted.ToString("MMM dd, yyyy hh:mm tt")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-user-check me-2"></i>Graded By</span>
                                    <span>@safeGrade?.MarkedBy</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-clock me-2"></i>Graded On</span>
                                    <span>@(safeGrade?.DateRecorded.ToString("MMM dd, yyyy hh:mm tt"))</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Performance</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <div class="display-4 text-@resultClass">
                                    @percentage.ToString("0")%
                                </div>
                            </div>

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>Score</span>
                                    <strong>@percentage.ToString("0.00")%</strong>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>Status</span>
                                    <span class="badge bg-@resultClass">
                                        @(safeGrade?.HasPassed == true ? "PASSED" : "FAILED")
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>Passing Score</span>
                                    <strong>50%</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-comment-dots me-2"></i>Feedback</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-@resultClass mb-0">
                        <i class="fas @(safeGrade?.HasPassed == true ? "fa-check-circle" : "fa-exclamation-circle") me-2"></i>
                        @safeGrade?.GradesFeedback
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                    <i class="fas fa-home me-2"></i>Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
