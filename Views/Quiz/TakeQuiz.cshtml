@model ITSL_Administration.ViewModels.QuizViewModel
@{
    ViewData["Title"] = "Take Quiz - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-action="AvailableQuiz">Available Quizzes</a>
    </li>
    <li class="breadcrumb-item active">Take Quiz</li>
}

@section Scripts {
    <script src="~/js/quiz.js" asp-append-version="true"></script>
}

<div class="container mt-4 quiz-container"
     data-quiz-id="@Model.QuizId"
     data-current-page="@Model.CurrentPage"
     data-total-questions="@Model.TotalQuestions">
    <div class="card shadow-sm">
        <div class="card-header bg-primary-blue text-white">
            <h4 class="mb-0"><i class="fas fa-play-circle me-2"></i>Take Quiz - ITSL Administration</h4>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h3 class="text-primary-blue">@Model.QuizTitle</h3>
                <p class="text-muted mb-2">
                    <i class="fas fa-book me-2"></i>Course: @Model.CourseName
                </p>
                <p class="text-muted mb-0">
                    <i class="fas fa-calendar me-2"></i>Due: @Model.DueDate.ToString("dd MMM yyyy HH:mm")
                </p>
            </div>

            <!-- Progress Indicator -->
            <div class="progress mb-4" style="height: 20px;">
                <div class="progress-bar bg-primary-blue" role="progressbar"
                     style="width: @((Model.CurrentPage * 100) / Model.TotalPages)%"
                     aria-valuenow="@Model.CurrentPage"
                     aria-valuemin="1"
                     aria-valuemax="@Model.TotalPages">
                    Page @Model.CurrentPage of @Model.TotalPages
                </div>
            </div>

            <!-- Main Quiz Form for Navigation -->
            <form asp-action="NavigateQuiz" asp-controller="Quiz" method="post" id="quizForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="QuizId" />
                <input type="hidden" asp-for="AssignmentId" />
                <input type="hidden" asp-for="CurrentPage" />

                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    var question = Model.Questions[i];
                    <div class="card mb-4 shadow-sm question-container">
                        <div class="card-header bg-light-blue">
                            <h6 class="mb-0">
                                <strong>Question @(i + 1 + ((Model.CurrentPage - 1) * Model.PageSize))</strong>
                            </h6>
                        </div>
                        <div class="card-body">
                            <p class="card-text fw-bold mb-3">@question.QuestionText</p>

                            <input type="hidden" asp-for="Questions[i].QuestionId" />

                            @for (int j = 0; j < question.Options.Count; j++)
                            {
                                var option = question.Options[j];
                                var inputId = $"Questions_{i}__UserAnswer_{j}";
                                <div class="form-check mb-2">
                                    <input type="radio"
                                           class="form-check-input"
                                           asp-for="Questions[i].UserAnswer"
                                           value="@option.Value"
                                           id="@inputId" />
                                    <label class="form-check-label" for="@inputId">
                                        @option.Text
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Navigation and Submit Buttons -->
                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                    @if (Model.HasPreviousPage)
                    {
                        <button type="submit" name="action" value="previous"
                                class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Previous Page
                        </button>
                    }
                    else
                    {
                        <span></span>
                    }

                    <span class="align-self-center fw-bold">
                        Page @Model.CurrentPage of @Model.TotalPages
                    </span>

                    @if (Model.HasNextPage)
                    {
                        <button type="submit" name="action" value="next"
                                class="btn btn-outline-primary">
                            Next Page <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-success"
                                data-bs-toggle="modal" data-bs-target="#submitModal">
                            <i class="fas fa-paper-plane me-2"></i>Submit Quiz
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Submit Confirmation Modal -->
<div class="modal fade" id="submitModal" tabindex="-1" aria-labelledby="submitModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="submitModalLabel">Submit Quiz</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to submit your quiz?</p>
                <p class="text-muted">Once submitted, you cannot change your answers.</p>

                <!-- Show unanswered questions warning -->
                <div id="unansweredWarning" class="alert alert-warning d-none">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <span id="unansweredCount">0</span> question(s) unanswered.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <!-- Final Submission Form -->
                <form asp-action="SubmitQuiz" asp-controller="Quiz" method="post" id="finalSubmitForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="QuizId" />
                    <input type="hidden" asp-for="AssignmentId" />
                    <input type="hidden" asp-for="CurrentPage" />

                    <!-- Hidden fields for ALL questions in the quiz will be populated by JavaScript -->
                    <div id="finalQuestionsContainer">
                        <!-- JavaScript will populate this with hidden inputs for all questions -->
                    </div>

                    <button type="submit" name="action" value="submit" class="btn btn-success" id="finalSubmitBtn">
                        Yes, Submit Quiz
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>