@{
    ViewData["Title"] = "Classes & Events";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-calendar-alt me-2"></i> Classes & Events</h3>
        </div>
        <div class="card-body">
            <div id="calendar"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="eventModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modalTitle" class="modal-title"></h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="eventForm">
                    <input type="hidden" id="eventId" />
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" id="eventTitle" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Start</label>
                        <input type="datetime-local" id="eventStart" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">End</label>
                        <input type="datetime-local" id="eventEnd" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea id="eventDescription" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Color</label>
                        <input type="color" id="eventColor" class="form-control form-control-color" value="#3788d8" />
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" id="eventAllDay" class="form-check-input" />
                        <label class="form-check-label">All-day</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnDelete" class="btn btn-danger">Delete</button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="btnSave" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendar = new FullCalendar.Calendar(document.getElementById('calendar'), {
                initialView: 'dayGridMonth',
                selectable: true,
                editable: true,
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: '@Url.Action("GetEvents", "ClassesAndEvents")',

                eventClick: function (info) { openModal(info.event, false); },
                select: function (info) { openModal({ start: info.start, end: info.end, allDay: info.allDay }, true); },
                eventDrop: function (info) { updateEvent(info.event); },
                eventResize: function (info) { updateEvent(info.event); }
            });
            calendar.render();

            function openModal(ev, isNew) {
                const modal = new bootstrap.Modal(document.getElementById('eventModal'));

                document.getElementById('eventId').value = ev.id || '';
                document.getElementById('eventTitle').value = ev.title || '';
                document.getElementById('eventStart').value = ev.start ? formatDateTime(ev.start) : '';
                document.getElementById('eventEnd').value = ev.end ? formatDateTime(ev.end) : '';
                document.getElementById('eventDescription').value = ev.extendedProps?.description || '';
                document.getElementById('eventColor').value = ev.backgroundColor || '#3788d8';
                document.getElementById('eventAllDay').checked = ev.allDay || false;

                document.getElementById('btnDelete').style.display = isNew ? 'none' : 'inline-block';
                document.getElementById('modalTitle').textContent = isNew ? 'Add Event' : 'Edit Event';

                modal.show();

                document.getElementById('btnSave').onclick = function () {
                    const newEvent = {
                        Id: document.getElementById('eventId').value,
                        Title: document.getElementById('eventTitle').value,
                        Start: document.getElementById('eventStart').value,
                        End: document.getElementById('eventEnd').value || null,
                        Description: document.getElementById('eventDescription').value,
                        BackgroundColor: document.getElementById('eventColor').value,
                        IsAllDay: document.getElementById('eventAllDay').checked
                    };
                    if (isNew) { createEvent(newEvent); } else { updateEvent(newEvent); }
                    modal.hide();
                };

                document.getElementById('btnDelete').onclick = function () {
                    if (confirm("Delete this event?")) {
                        deleteEvent(ev.id);
                        modal.hide();
                    }
                };
            }

            function formatDateTime(date) { return date.toISOString().slice(0, 16); }

            // CRUD functions
            function createEvent(ev) { send('@Url.Action("CreateEvent", "ClassesAndEvents")', ev); }
            function updateEvent(ev) { send('@Url.Action("UpdateEvent", "ClassesAndEvents")', ev); }
            function deleteEvent(id) { send('@Url.Action("DeleteEvent", "ClassesAndEvents")', id); }

            function send(url, data) {
                fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                }).then(r => { if (r.ok) calendar.refetchEvents(); });
            }
        });
    </script>
}
