@model ITSL_Administration.Models.Participant

@{
    ViewData["Title"] = "Delete Participant";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="form-header text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>Delete Participant
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="alert alert-danger">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-circle me-2"></i>Warning!
        </h4>
        <p>You are about to permanently delete this participant. This action cannot be undone.</p>
    </div>

    <div class="form-card border-danger p-4">
        <h4 class="mb-4">Participant Details</h4>
        <div class="row">
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.ParticipantID)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ParticipantID)</dd>

                    <dt class="col-sm-4 text-muted fw-bold">Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Surname)</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 text-muted fw-bold">Age</dt>
                    <dd class="col-sm-8"><span class="age-badge">@Html.DisplayFor(model => model.Age)</span></dd>
                </dl>
            </div>
        </div>

        <div class="form-actions mt-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ParticipantID" />
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>
