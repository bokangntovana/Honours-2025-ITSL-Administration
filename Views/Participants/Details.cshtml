@model ITSL_Administration.Models.Participant

@{
    ViewData["Title"] = "Participant Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="form-header">
            <i class="fas fa-users me-2"></i>Participant Details
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="form-card p-4">
        <div class="row">
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.ParticipantID)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ParticipantID)</dd>

                    <dt class="col-sm-4 text-muted fw-bold">Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Surname)</dd>

                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">
                        <a href="mailto:@Model.Email" class="text-link">@Html.DisplayFor(model => model.Email)</a>
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Age)</dt>
                    <dd class="col-sm-8"><span class="age-badge">@Html.DisplayFor(model => model.Age)</span></dd>

                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                    <dd class="col-sm-8">
                        <a href="tel:@Model.PhoneNumber" class="text-link">@Html.DisplayFor(model => model.PhoneNumber)</a>
                    </dd>

                    <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.City)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">Enrollment Date</dt>
                    <dd class="col-sm-8 enrollment-date">@Model.EnrollmentDate.ToString("dd MMMM yyyy")</dd>
                </dl>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Edit" asp-route-id="@Model.ParticipantID" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-list me-2"></i>View All Participants
            </a>
        </div>
    </div>
</div>