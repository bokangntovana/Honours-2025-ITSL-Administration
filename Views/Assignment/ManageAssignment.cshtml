@model ITSL_Administration.Models.Course

@{
    ViewData["Title"] = "Manage Assignments - " + Model.CourseName;
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">@Model.CourseName - Assignments</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <a asp-action="Create" asp-route-courseId="@Model.CourseID" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Create Assignment
    </a>

    <table class="table table-hover table-striped border">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Type</th>
                <th>Due Date</th>
                <th>Total Mark</th>
                <th>Weight</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Assignments != null && Model.Assignments.Any())
            {
                @foreach (var a in Model.Assignments.OrderByDescending(x => x.CreatedAt))
                {
                    <tr>
                        <td>@a.Title</td>
                        <td>@a.AssignmentType</td>
                        <td>@a.DueDate.ToString("dd MMM yyyy")</td>
                        <td>@a.SetAssignmentMark</td>
                        <td>@a.Weight</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@a.AssignmentID" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@a.AssignmentID" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No assignments available.</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Courses" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Courses
    </a>
</div>
