@using Humanizer
@model ITSL_Administration.Models.Course

@{
    ViewData["Title"] = "Manage Assignments - " + Model.CourseName;
}

<div class="container mt-4">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Courses" asp-action="Index">
                    <i class="fas fa-home"></i> Courses
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseID">
                    @Model.CourseName
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Assignments</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="fas fa-tasks me-2"></i>@Model.CourseName - Assignments
        </h2>

        <div class="btn-group">
            <a asp-controller="Courses" asp-action="Detail" asp-route-id="@Model.CourseID"
               class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Course
            </a>
            <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-list me-2"></i>All Courses
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="btn-group">
            <a asp-action="Create" asp-route-courseId="@Model.CourseID" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Create New Assignment
            </a>
            <a asp-controller="Courses" asp-action="ContentList" asp-route-id="@Model.CourseID"
               class="btn btn-outline-info">
                <i class="fas fa-folder-open me-2"></i>Course Materials
            </a>
        </div>

        <span class="badge bg-secondary fs-6">
            <i class="fas fa-clipboard-list me-1"></i>
            @(Model.Assignments?.Count ?? 0) Assignment(s)
        </span>
    </div>

    <!-- Assignments Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Assignments != null && Model.Assignments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Type</th>
                                <th>Due Date</th>
                                <th>Total Mark</th>
                                <th>Weight</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var a in Model.Assignments.OrderByDescending(x => x.CreatedAt))
                            {
                                var isOverdue = a.DueDate < DateTime.Now;
                                var isDueSoon = a.DueDate <= DateTime.Now.AddDays(3) && a.DueDate >= DateTime.Now;

                                <tr class="@(isOverdue ? "table-warning" : "")">
                                    <td>
                                        <strong>@a.Title</strong>
                                        @if (!string.IsNullOrEmpty(a.Description))
                                        {
                                            <br>
                                            <small class="text-muted">@a.Description.Truncate(50)</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@a.AssignmentType</span>
                                    </td>
                                    <td>
                                        <span class="@(isOverdue ? "text-danger" : isDueSoon ? "text-warning" : "")">
                                            @a.DueDate.ToString("dd MMM yyyy")
                                        </span>
                                        @if (isOverdue)
                                        {
                                            <br>

                                            <small class="text-danger"><i class="fas fa-exclamation-triangle"></i> Overdue</small>
                                        }
                                        else if (isDueSoon)
                                        {
                                            <br>

                                            <small class="text-warning"><i class="fas fa-clock"></i> Due soon</small>
                                        }
                                    </td>
                                    <td>@a.SetAssignmentMark</td>
                                    <td>@(a.Weight.ToString("P0"))</td>
                                    <td>
                                        @{
                                            var submissionCount = a.Submissions?.Count ?? 0;
                                            var statusBadge = submissionCount > 0 ? "bg-success" : "bg-secondary";
                                            var statusText = submissionCount > 0 ? $"{submissionCount} submissions" : "No submissions";
                                        }
                                        <span class="badge @statusBadge">@statusText</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@a.AssignmentID"
                                               class="btn btn-sm btn-outline-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@a.AssignmentID"
                                               class="btn btn-sm btn-outline-primary" title="Edit Assignment">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="ManageSubmissions" asp-route-id="@a.AssignmentID"
                                               class="btn btn-sm btn-outline-success" title="Manage Submissions">
                                                <i class="fas fa-file-upload"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@a.AssignmentID"
                                               class="btn btn-sm btn-outline-danger" title="Delete Assignment">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No Assignments Yet</h4>
                    <p class="text-muted">Get started by creating your first assignment for this course.</p>
                    <a asp-action="Create" asp-route-courseId="@Model.CourseID" class="btn btn-primary mt-2">
                        <i class="fas fa-plus me-2"></i>Create First Assignment
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Quick Stats Footer -->
    @if (Model.Assignments != null && Model.Assignments.Any())
    {
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary">@Model.Assignments.Count</h3>
                        <p class="text-muted">Total Assignments</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-warning">@Model.Assignments.Count(a => a.DueDate < DateTime.Now)</h3>
                        <p class="text-muted">Overdue</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info">@Model.Assignments.Count(a => a.DueDate <= DateTime.Now.AddDays(3) && a.DueDate >= DateTime.Now)</h3>
                        <p class="text-muted">Due Soon</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@Model.Assignments.Sum(a => a.Submissions?.Count ?? 0)</h3>
                        <p class="text-muted">Total Submissions</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

