@using System.IO
@model ITSL_Administration.Models.Assignment

@{
    ViewData["Title"] = "Edit Assignment";
}

<div class="container mt-4">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Courses" asp-action="Index">
                    <i class="fas fa-home"></i> Courses
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Assignments" asp-action="ManageAssignment" asp-route-courseId="@Model.CourseId">
                    Assignments
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Details" asp-route-id="@Model.AssignmentID">
                    @Model.Title
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Assignment</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="AssignmentID" />
                <input type="hidden" asp-for="CourseId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter assignment title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="AssignmentType" class="form-label fw-bold"></label>
                            <select asp-for="AssignmentType" asp-items="Html.GetEnumSelectList<AssignmentType>()" class="form-control">
                                <option value="">Select Assignment Type</option>
                            </select>
                            <span asp-validation-for="AssignmentType" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter assignment description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="DueDate" class="form-label fw-bold"></label>
                            <input asp-for="DueDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="SetAssignmentMark" class="form-label fw-bold"></label>
                            <input asp-for="SetAssignmentMark" class="form-control" placeholder="0.0" />
                            <span asp-validation-for="SetAssignmentMark" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="Weight" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <input asp-for="Weight" class="form-control" placeholder="0.00" step="0.01" min="0" max="1" />
                                <span class="input-group-text">%</span>
                            </div>
                            <small class="form-text text-muted">Enter as decimal (0.15 for 15%)</small>
                            <span asp-validation-for="Weight" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Created</label>
                            <input type="text" class="form-control" value="@Model.CreatedAt.ToString("dd MMM yyyy")" readonly />
                            <small class="form-text text-muted">Assignment creation date</small>
                        </div>
                    </div>
                </div>

                <!-- Current Files -->
                @if (Model.Files != null && Model.Files.Any())
                {
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Current Instruction Files</label>
                        <div class="border p-3 rounded bg-light">
                            @foreach (var file in Model.Files)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <i class="fas fa-file me-2 text-primary"></i>
                                        <span>@file.FileName</span>
                                        <small class="text-muted">(@(file.FileSize / 1024) KB)</small>
                                    </div>
                                    <a href="/UploadedFiles/@file.FilePath"
                                       class="btn btn-sm btn-outline-primary" target="_blank">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- New Files Upload -->
                <div class="form-group mb-4">
                    <label class="form-label fw-bold">Upload New Instruction Files</label>
                    <input type="file" name="files" multiple class="form-control" />
                    <small class="form-text text-muted">You can select multiple files. Maximum file size: unlimited.</small>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top pt-3">
                    <a asp-action="Details" asp-route-id="@Model.AssignmentID" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <a asp-action="ManageAssignment" asp-route-courseId="@Model.CourseId" class="btn btn-secondary me-md-2">
                        <i class="fas fa-list me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Format weight display
            const weightInput = document.getElementById('Weight');
            if (weightInput) {
                weightInput.addEventListener('change', function() {
                    const value = parseFloat(this.value);
                    if (value > 1) {
                        this.value = (value / 100).toFixed(2);
                    }
                });
            }

            // Set min date for due date to today
            const dueDateInput = document.querySelector('input[type="datetime-local"]');
            if (dueDateInput) {
                const today = new Date().toISOString().slice(0, 16);
                dueDateInput.min = today;
            }
        });
    </script>
}