@model ITSL_Administration.Models.Assignment
@using Microsoft.AspNetCore.Identity
@inject UserManager<ITSL_Administration.Models.User> _userManager
@{
    ViewData["Title"] = "Assignment Details";
    var currentUserId = _userManager.GetUserId(User);
    var userSubmission = Model.Submissions?.FirstOrDefault(s => s.ParticipantId == currentUserId);
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">@Model.Title</h2>
                <span class="badge bg-light text-dark fs-6">@Model.AssignmentType</span>
            </div>
        </div>
        <div class="card-body">
            <!-- Assignment Information -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Assignment Information</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Description:</dt>
                                <dd class="col-sm-9">@Model.Description</dd>

                                <dt class="col-sm-3">Due Date:</dt>
                                <dd class="col-sm-9">@Model.DueDate.ToString("MMM dd, yyyy HH:mm")</dd>

                                <dt class="col-sm-3">Total Marks:</dt>
                                <dd class="col-sm-9">@Model.SetAssignmentMark</dd>

                                <dt class="col-sm-3">Weight:</dt>
                                <dd class="col-sm-9">@(Model.Weight * 100)%</dd>

                                <dt class="col-sm-3">Created:</dt>
                                <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Course Information</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>@Model.Course?.CourseName</strong></p>
                            <p class="text-muted">@Model.Course?.CourseDescription</p>
                            <p><small>Code: @Model.Course?.CourseCode</small></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Files Section -->
            @if (Model.Files?.Any() == true)
            {
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Instruction Files</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            @foreach (var file in Model.Files)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-file"></i>
                                        <span>@file.FileName</span>
                                        <small class="text-muted">(@file.FileSize bytes)</small>
                                    </div>
                                    <a href="@Url.Action("Download", "File", new { id = file.FileId })"
                                       class="btn btn-sm btn-outline-primary" target="_blank">
                                        Download
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <!-- Participant Submission Status Section -->
            @if (@* !User.IsInRole("Admin") && *@ !User.IsInRole("Lecturer") && !User.IsInRole("Tutor"))
            {
                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">My Submission</h5>
                    </div>
                    <div class="card-body">
                        @if (userSubmission != null)
                        {
                            <div class="alert alert-info">
                                <p>
                                    <strong>Status:</strong>
                                    @if (userSubmission.Grade != null)
                                    {
                                        <span class="badge bg-success">Graded</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Submitted - Awaiting Grade</span>
                                    }
                                </p>
                                <p><strong>Submitted:</strong> @userSubmission.DateSubmitted.ToString("MMM dd, yyyy HH:mm")</p>

                                @if (userSubmission.Grade != null)
                                {
                                    <div class="mt-3 p-3 bg-white rounded border">
                                        <h6>Your Grade:</h6>
                                        <p class="mb-1"><strong>Mark:</strong> @userSubmission.Grade.AssignmentMark/@Model.SetAssignmentMark</p>
                                        <p class="mb-1">
                                            <strong>Status:</strong>
                                            <span class="badge @(userSubmission.Grade.HasPassed ? "bg-success" : "bg-danger")">
                                                @(userSubmission.Grade.HasPassed ? "PASS" : "FAIL")
                                            </span>
                                        </p>
                                        <a href="@Url.Action("Details", "Grades", new { id = userSubmission.Grade.GradeID })"
                                           class="btn btn-sm btn-primary mt-2">
                                            <i class="fas fa-eye"></i> View Detailed Grade
                                        </a>
                                    </div>
                                }
                            </div>

                            <!-- Show submitted files -->
                            @if (userSubmission.Files?.Any() == true)
                            {
                                <div class="mt-3">
                                    <h6>Your Submitted Files:</h6>
                                    <ul class="list-group">
                                        @foreach (var file in userSubmission.Files)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@file.FileName</span>
                                                <a href="@Url.Action("Download", "File", new { id = file.FileId })"
                                                   class="btn btn-sm btn-outline-primary">Download</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <p>You haven't submitted this assignment yet.</p>
                                <a href="@Url.Action("Create", "Submission", new { assignmentId = Model.AssignmentID })"
                                   class="btn btn-success">
                                    <i class="fas fa-upload"></i> Submit Assignment
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Submissions Section (for authorized users) -->
            @if (User.IsInRole("Admin") || User.IsInRole("Lecturer") || User.IsInRole("Tutor"))
            {
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Submissions</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Submissions?.Any() == true)
                        {
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Participant</th>
                                        <th>Submitted Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var submission in Model.Submissions)
                                    {
                                        <tr>
                                            <td>@submission.Participant?.UserName</td>
                                            <td>@submission.DateSubmitted.ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>
                                                <span class="badge bg-@(submission.Grade != null ? "success" : "warning")">
                                                    @(submission.Grade != null ? "Graded" : "Pending")
                                                </span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Submission", new { id = submission.SubmissionID })"
                                                   class="btn btn-sm btn-outline-primary">View Submission</a>
                                                @if (submission.Grade == null)
                                                {
                                                    <a href="@Url.Action("Create", "Grades", new { submissionId = submission.SubmissionID })"
                                                       class="btn btn-sm btn-success">Grade</a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Details", "Grades", new { id = submission.Grade.GradeID })"
                                                       class="btn btn-sm btn-info">View Grade</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p class="text-muted">No submissions yet.</p>
                        }

                        <a href="@Url.Action("ManageSubmissions", new { id = Model.AssignmentID })"
                           class="btn btn-primary">Manage All Submissions</a>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <div>
                    @if (User.IsInRole("Lecturer") || User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Edit", new { id = Model.AssignmentID })"
                           class="btn btn-warning">Edit Assignment</a>
                        <a href="@Url.Action("Delete", new { id = Model.AssignmentID })"
                           class="btn btn-danger">Delete Assignment</a>
                    }
                    <a href="@Url.Action("ManageAssignment", new { courseId = Model.CourseId })"
                       class="btn btn-secondary">Back to Course</a>
                </div>

                <!-- Student submission button (only show if participant hasn't submitted yet) -->
                @if (@* !User.IsInRole("Admin") && *@ !User.IsInRole("Lecturer") && !User.IsInRole("Tutor") && userSubmission == null)
                {
                    <a href="@Url.Action("Create", "Submission", new { assignmentId = Model.AssignmentID })"
                       class="btn btn-success">Submit Assignment</a>
                }
            </div>
        </div>
    </div>
</div>