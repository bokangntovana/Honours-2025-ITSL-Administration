@model ITSL_Administration.Models.Assignment
@using Microsoft.AspNetCore.Identity
@inject UserManager<ITSL_Administration.Models.User> _userManager
@{
    ViewData["Title"] = "Assignment Details - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUserId = _userManager.GetUserId(User);
    var userSubmission = Model.Submissions?.FirstOrDefault(s => s.ParticipantId == currentUserId);
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-controller="Courses" asp-action="Index">Courses</a>
    </li>
    <li class="breadcrumb-item">
        <a asp-controller="Assignments" asp-action="ManageAssignment" asp-route-courseId="@Model.CourseId">Assignments</a>
    </li>
    <li class="breadcrumb-item active">@Model.Title</li>
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-blue mb-1">
                <i class="fas fa-file-alt me-2"></i>Assignment Details - ITSL Administration
            </h2>
            <p class="text-muted mb-0">@Model.Course?.CourseName - @Model.Course?.CourseCode</p>
        </div>
        <a asp-action="ManageAssignment" asp-route-courseId="@Model.CourseId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary-blue text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas @(Model.AssignmentType.ToString() == "Quiz" ? "fa-question-circle" : "fa-file-alt") me-2"></i>
                @Model.Title
            </h4>
            <span class="badge bg-light text-dark fs-6">@Model.AssignmentType</span>
        </div>

        <div class="card-body">
            <!-- Assignment Information -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="card border-0 bg-light">
                        <div class="card-header bg-light-blue">
                            <h5 class="mb-0 text-primary-blue">
                                <i class="fas fa-info-circle me-2"></i>Assignment Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="details-list">
                                <dt>Description:</dt>
                                <dd>@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</dd>

                                <dt>Due Date:</dt>
                                <dd>
                                    @Model.DueDate.ToString("MMM dd, yyyy 'at' HH:mm")
                                    @if (Model.DueDate < DateTime.Now)
                                    {
                                        <span class="badge bg-danger ms-2">Overdue</span>
                                    }
                                    else if (Model.DueDate <= DateTime.Now.AddDays(7))
                                    {
                                        <span class="badge bg-warning ms-2">Due Soon</span>
                                    }
                                </dd>

                                <dt>Total Marks:</dt>
                                <dd>@Model.SetAssignmentMark</dd>

                                <dt>Weight:</dt>
                                <dd>@(Model.Weight.ToString("P0"))</dd>

                                <dt>Created:</dt>
                                <dd>@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 bg-light">
                        <div class="card-header bg-light-blue">
                            <h5 class="mb-0 text-primary-blue">
                                <i class="fas fa-book me-2"></i>Course Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <h6 class="text-primary-blue">@Model.Course?.CourseName</h6>
                            <p class="text-muted small mb-2">@Model.Course?.CourseDescription</p>
                            <div class="border-top pt-2 mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-code me-1"></i>Code: @Model.Course?.CourseCode
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Files Section -->
            @if (Model.Files?.Any() == true)
            {
                <div class="card mb-4 border-0">
                    <div class="card-header bg-light-blue">
                        <h5 class="mb-0 text-primary-blue">
                            <i class="fas fa-file-download me-2"></i>Instruction Files
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var file in Model.Files)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="fas
                                                    @(file.FileName.EndsWith(".pdf") ? "fa-file-pdf text-danger" :
                                                                                         file.FileName.EndsWith(".doc") || file.FileName.EndsWith(".docx") ? "fa-file-word text-primary" :
                                                                                         file.FileName.EndsWith(".xls") || file.FileName.EndsWith(".xlsx") ? "fa-file-excel text-success" :
                                                                                         "fa-file text-secondary")
                                            me-3 fa-lg"></i>
                                <div>
                                    <div class="fw-medium">@file.FileName</div>
                                    <small class="text-muted">@((file.FileSize / 1024f).ToString("F1")) KB</small>
                                </div>
                            </div>
                            <a href="@Url.Action("Download", "File", new { id = file.FileId })"
                               class="btn btn-sm btn-outline-primary" target="_blank">
                                <i class="fas fa-download me-1"></i>Download
                            </a>
                        </div>
                                                }
                        </div>
                    </div>
                </div>
            }

            <!-- Participant Submission Status Section -->
            @if (!User.IsInRole("Lecturer") && !User.IsInRole("Tutor") @* && !User.IsInRole("Admin") *@)
            {
                <div class="card mt-4 border-0">
                    <div class="card-header bg-light-blue">
                        <h5 class="mb-0 text-primary-blue">
                            <i class="fas fa-upload me-2"></i>My Submission
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (userSubmission != null)
                        {
                            <div class="alert alert-info border-0">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="alert-heading mb-0">
                                        <i class="fas fa-check-circle me-2"></i>Submission Status
                                    </h6>
                                    <span class="badge @(userSubmission.Grade != null ? "bg-success" : "bg-warning text-dark") fs-6">
                                        @(userSubmission.Grade != null ? "GRADED" : "SUBMITTED - AWAITING GRADE")
                                    </span>
                                </div>

                                <p class="mb-3">
                                    <i class="fas fa-calendar me-2"></i>
                                    <strong>Submitted:</strong> @userSubmission.DateSubmitted.ToString("MMM dd, yyyy 'at' HH:mm")
                                </p>

                                @if (userSubmission.Grade != null)
                                {
                                    <div class="mt-3 p-3 bg-white rounded border">
                                        <h6 class="text-primary-blue mb-3">
                                            <i class="fas fa-chart-bar me-2"></i>Your Grade
                                        </h6>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p class="mb-2"><strong>Mark:</strong> @userSubmission.Grade.AssignmentMark/@Model.SetAssignmentMark</p>
                                                <p class="mb-0">
                                                    <strong>Status:</strong>
                                                    <span class="badge @(userSubmission.Grade.HasPassed ? "bg-success" : "bg-danger") fs-6">
                                                        @(userSubmission.Grade.HasPassed ? "PASS" : "FAIL")
                                                    </span>
                                                </p>
                                            </div>
                                            <div class="col-md-6 text-end">
                                                <a href="@Url.Action("Details", "Grades", new { id = userSubmission.Grade.GradeID })"
                                                   class="btn btn-primary btn-sm">
                                                    <i class="fas fa-eye me-1"></i> View Detailed Grade
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- Show submitted files -->
                                @if (userSubmission.Files?.Any() == true)
                                {
                                    <div class="mt-4">
                                        <h6 class="text-primary-blue mb-3">
                                            <i class="fas fa-file-upload me-2"></i>Your Submitted Files
                                        </h6>
                                        <div class="list-group">
                                            @foreach (var file in userSubmission.Files)
                                            {
                                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-file me-3 text-primary-blue"></i>
                                                        <span>@file.FileName</span>
                                                    </div>
                                                    <a href="@Url.Action("Download", "File", new { id = file.FileId })"
                                                       class="btn btn-sm btn-outline-primary">Download</a>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning border-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="alert-heading mb-2">
                                            <i class="fas fa-exclamation-triangle me-2"></i>No Submission Yet
                                        </h6>
                                        <p class="mb-0">You haven't submitted this assignment yet.</p>
                                    </div>
                                    <a href="@Url.Action("Create", "Submission", new { assignmentId = Model.AssignmentID })"
                                       class="btn btn-success">
                                        <i class="fas fa-upload me-2"></i>Submit Assignment
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Submissions Section (for authorized users) -->
            @if (User.IsInRole("Admin") || User.IsInRole("Lecturer") || User.IsInRole("Tutor"))
            {
                <div class="card border-0">
                    <div class="card-header bg-light-blue d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-primary-blue">
                            <i class="fas fa-users me-2"></i>Student Submissions
                        </h5>
                        <div>
                            <span class="badge bg-success me-2">@Model.Submissions?.Count(s => s.Grade != null) Graded</span>
                            <span class="badge bg-warning text-dark">@Model.Submissions?.Count(s => s.Grade == null) Pending</span>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.Submissions?.Any() == true)
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Participant</th>
                                            <th>Submitted Date</th>
                                            <th>Status</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var submission in Model.Submissions.OrderBy(s => s.Participant?.UserName))
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-user-circle text-primary-blue me-2"></i>
                                                        @submission.Participant?.UserName
                                                    </div>
                                                </td>
                                                <td>@submission.DateSubmitted.ToString("MMM dd, yyyy HH:mm")</td>
                                                <td>
                                                    <span class="badge bg-@(submission.Grade != null ? "success" : "warning")">
                                                        @(submission.Grade != null ? "Graded" : "Pending")
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="@Url.Action("Details", "Submission", new { id = submission.SubmissionID })"
                                                           class="btn btn-outline-primary">View</a>
                                                        @if (submission.Grade == null)
                                                        {
                                                            <a href="@Url.Action("Create", "Grades", new { submissionId = submission.SubmissionID })"
                                                               class="btn btn-success">Grade</a>
                                                        }
                                                        else
                                                        {
                                                            <a href="@Url.Action("Details", "Grades", new { id = submission.Grade.GradeID })"
                                                               class="btn btn-info">View Grade</a>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="mt-3">
                                <a href="@Url.Action("ManageSubmissions", new { id = Model.AssignmentID })"
                                   class="btn btn-primary">
                                    <i class="fas fa-cog me-2"></i>Manage All Submissions
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No Submissions Yet</h5>
                                <p class="text-muted">Students haven't submitted any work for this assignment.</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    @if (User.IsInRole("Lecturer") || User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Edit", new { id = Model.AssignmentID })"
                           class="btn btn-warning me-2">
                            <i class="fas fa-edit me-2"></i>Edit Assignment
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.AssignmentID })"
                           class="btn btn-danger me-2">
                            <i class="fas fa-trash me-2"></i>Delete Assignment
                        </a>
                    }
                    <a href="@Url.Action("ManageAssignment", new { courseId = Model.CourseId })"
                       class="btn btn-outline-secondary">
                        <i class="fas fa-list me-2"></i>Back to Course
                    </a>
                </div>

                <!-- Student submission button (only show if participant hasn't submitted yet) -->
                @if (!User.IsInRole("Lecturer") && !User.IsInRole("Tutor") @* && !User.IsInRole("Admin") *@ && userSubmission == null)
                {
                    <a href="@Url.Action("Create", "Submission", new { assignmentId = Model.AssignmentID })"
                       class="btn btn-success">
                        <i class="fas fa-upload me-2"></i>Submit Assignment
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effects for better UX
            const tableRows = document.querySelectorAll('tbody tr');
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.backgroundColor = '#f8f9fa';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.backgroundColor = '';
                });
            });

            // Auto-refresh for staff users to see new submissions
            @if (User.IsInRole("Admin") || User.IsInRole("Lecturer") || User.IsInRole("Tutor"))
            {
                    <text>
                    setTimeout(function() {
                        location.reload();
                    }, 120000); // 2 minutes
                    </text>
            }
        });
    </script>
}