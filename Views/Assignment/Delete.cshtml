@model ITSL_Administration.Models.Assignment

@{
    ViewData["Title"] = "Delete Assignment";
}

<div class="container mt-4">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Courses" asp-action="Index">
                    <i class="fas fa-home"></i> Courses
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Assignments" asp-action="ManageAssignment" asp-route-courseId="@Model.CourseId">
                    Assignments
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Details" asp-route-id="@Model.AssignmentID">
                    @Model.Title
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Assignment</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4 class="alert-heading"><i class="fas fa-warning me-2"></i>Warning!</h4>
                <p class="mb-0"><strong>This action cannot be undone.</strong> The following assignment and all associated data will be permanently deleted:</p>
                <ul class="mt-2 mb-0">
                    <li>Assignment details and instructions</li>
                    <li>All uploaded instruction files</li>
                    <li>All student submissions</li>
                    <li>All grades and feedback</li>
                </ul>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary">Assignment Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Title:</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8"><span class="badge bg-info">@Model.AssignmentType</span></dd>

                        <dt class="col-sm-4">Due Date:</dt>
                        <dd class="col-sm-8">@Model.DueDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4">Total Marks:</dt>
                        <dd class="col-sm-8">@Model.SetAssignmentMark</dd>

                        <dt class="col-sm-4">Weight:</dt>
                        <dd class="col-sm-8">@(Model.Weight.ToString("P0"))</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h5 class="text-primary">Impact Summary</h5>
                    <div class="alert alert-light">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Instruction Files:</span>
                            <span class="badge bg-secondary">@(Model.Files?.Count ?? 0)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Student Submissions:</span>
                            <span class="badge bg-secondary">@(Model.Submissions?.Count ?? 0)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Grades Recorded:</span>
                            <span class="badge bg-secondary">@(Model.Submissions?.Count(s => s.Grade != null) ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mt-3">
                    <h6 class="text-muted">Description:</h6>
                    <p class="border p-3 rounded bg-light">@Model.Description</p>
                </div>
            }

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                <input type="hidden" asp-for="AssignmentID" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Details" asp-route-id="@Model.AssignmentID" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to Details
                    </a>
                    <a asp-action="ManageAssignment" asp-route-courseId="@Model.CourseId" class="btn btn-secondary me-md-2">
                        <i class="fas fa-list me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Permanently Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add confirmation for the delete button
            const deleteForm = document.querySelector('form');
            const deleteButton = deleteForm.querySelector('button[type="submit"]');

            deleteButton.addEventListener('click', function(e) {
                if (!confirm('Are you absolutely sure you want to delete this assignment? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}