@model ITSL_Administration.Models.Assignment
@{
    ViewData["Title"] = "Delete Assignment - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-controller="Courses" asp-action="Index">Courses</a>
    </li>
    <li class="breadcrumb-item">
        <a asp-controller="Assignments" asp-action="ManageAssignment" asp-route-courseId="@Model.CourseId">Assignments</a>
    </li>
    <li class="breadcrumb-item">
        <a asp-action="Details" asp-route-id="@Model.AssignmentID">@Model.Title</a>
    </li>
    <li class="breadcrumb-item active">Delete Assignment</li>
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Assignment - ITSL Administration</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading"><i class="fas fa-warning me-2"></i>Irreversible Action</h5>
                <p class="mb-0"><strong>This action cannot be undone.</strong> The following assignment and all associated data will be permanently deleted:</p>
                <ul class="mt-2 mb-0">
                    <li>Assignment details and instructions</li>
                    <li>All uploaded instruction files</li>
                    <li>All student submissions and files</li>
                    <li>All grades and feedback records</li>
                </ul>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary-blue mb-3">Assignment Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Title:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Title</dd>

                        <dt class="col-sm-4 text-muted">Type:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.AssignmentType</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">Due Date:</dt>
                        <dd class="col-sm-8">@Model.DueDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4 text-muted">Total Marks:</dt>
                        <dd class="col-sm-8">@Model.SetAssignmentMark</dd>

                        <dt class="col-sm-4 text-muted">Weight:</dt>
                        <dd class="col-sm-8">@(Model.Weight.ToString("P0"))</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5 class="text-primary-blue mb-3">Impact Summary</h5>
                    <div class="card bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2 p-2 border-bottom">
                                <span>Instruction Files:</span>
                                <span class="badge bg-secondary">@(Model.Files?.Count ?? 0)</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2 p-2 border-bottom">
                                <span>Student Submissions:</span>
                                <span class="badge bg-secondary">@(Model.Submissions?.Count ?? 0)</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center p-2">
                                <span>Grades Recorded:</span>
                                <span class="badge bg-secondary">@(Model.Submissions?.Count(s => s.Grade != null) ?? 0)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mt-4">
                    <h6 class="text-muted">Assignment Description:</h6>
                    <div class="border p-3 rounded bg-light">
                        @Model.Description
                    </div>
                </div>
            }

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                <input type="hidden" asp-for="AssignmentID" />
                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <div>
                        <a asp-action="Details" asp-route-id="@Model.AssignmentID" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-arrow-left me-2"></i>Back to Details
                        </a>
                        <a asp-action="ManageAssignment" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">
                            <i class="fas fa-list me-2"></i>Back to List
                        </a>
                    </div>
                    <button type="submit" class="btn btn-danger" id="deleteButton">
                        <i class="fas fa-trash me-2"></i>Permanently Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButton = document.getElementById('deleteButton');

            deleteButton.addEventListener('click', function(e) {
                if (!confirm('FINAL WARNING: Are you absolutely sure you want to delete this assignment? This will permanently remove all associated data including student submissions and grades. This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}