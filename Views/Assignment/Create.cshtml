@model ITSL_Administration.Models.Assignment

@{
    ViewData["Title"] = "Create Assignment";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Create Assignment</h2>

    <form asp-action="Create" enctype="multipart/form-data">
        <input type="hidden" asp-for="CourseId" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-bold"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DueDate" class="form-label fw-bold"></label>
            <input asp-for="DueDate" type="date" class="form-control" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SetAssignmentMark" class="form-label fw-bold"></label>
            <input asp-for="SetAssignmentMark" class="form-control" />
            <span asp-validation-for="SetAssignmentMark" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Weight" class="form-label fw-bold"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AssignmentType" class="form-label fw-bold"></label>
            <select asp-for="AssignmentType" class="form-select" asp-items="Html.GetEnumSelectList<AssignmentType>()">
                <option value="">-- Select Type --</option>
            </select>
            <span asp-validation-for="AssignmentType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Instruction File (optional)</label>
            <input type="file" name="instructionFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i> Save Assignment
        </button>
        <a asp-action="ManageAssignment" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>
