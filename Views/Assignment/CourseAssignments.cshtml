@using ITSL_Administration
@model IEnumerable<Assignment>
@{
    ViewData["Title"] = "Assignments";
    var courseId = ViewBag.CourseId;
    var courseName = ViewBag.CourseName;
}

<h2>@courseName - Assignments</h2>

<div class="mb-3">
    @if (User.IsInRole("Admin") || User.IsInRole("Lecturer"))
    {
        <a asp-action="Create" asp-route-courseId="@courseId" class="btn btn-primary mr-2">Create Assignment</a>
        <a asp-action="CreateQuiz" asp-route-courseId="@courseId" class="btn btn-success">Create Quiz</a>
    }
    <a asp-controller="Courses" asp-action="Details" asp-route-id="@courseId" class="btn btn-secondary float-right">Back to Course</a>
</div>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Due Date</th>
            <th>Max Points</th>
            <th>Submissions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.AssignmentType</td>
                <td>@item.DueDate.ToString("g")</td>
                <td>@item.MaxPoints</td>
                <td>
                    <a asp-action="Submissions" asp-route-id="@item.AssignmentId" class="btn btn-sm btn-info">
                        View (@item.Submissions?.Count ?? 0)
                    </a>
                </td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Lecturer"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.AssignmentId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.AssignmentId" class="btn btn-sm btn-danger">Delete</a>

                        @if (item.AssignmentType == AssignmentType.Quiz)
                        {
                            <a asp-controller="Quiz" asp-action="ManageQuestions" asp-route-assignmentId="@item.AssignmentId"
                               class="btn btn-sm btn-primary">Manage Quiz</a>
                        }
                    }
                    else
                    {
                        <a asp-controller="Submission" asp-action="Create" asp-route-assignmentId="@item.AssignmentId"
                           class="btn btn-sm btn-primary">Submit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>