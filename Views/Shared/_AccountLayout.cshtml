<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!--favicon-->
    <link rel="icon" type="image/png" href="~/itsl_favicon.png">
    <!--Existing style sheets-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <!--Chatbot style-->
    <link rel="stylesheet" href="~/css/chatbot.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="About"><i class="fas fa-info-circle me-1"></i>Learn More About ITSL</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Donations" asp-action="Donations"><i class="fas fa-donate me-1"></i>Donate To Our Cause</a>
                        </li>
                        <li class="nav-item">
                            <button id="themeToggle" class="btn btn-link text-decoration-none">
                                <i id="themeIcon" class="fas fa-moon"></i>
                            </button>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="account-layout">
        @RenderBody()
    </div>
    <partial name="_Chatbot" />
  @*   <footer class="account-footer">
        <div class="container-fluid">
            &copy; @DateTime.Now.Year - ITSL Administration Designed By Bokang Ntovana
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chatbot.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>