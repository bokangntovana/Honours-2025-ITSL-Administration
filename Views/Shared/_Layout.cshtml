@using Microsoft.AspNetCore.Identity
@using ITSL_Administration.ViewModels
@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = "ITSL Admin";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITSL Administration</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="icon" type="image/png" href="~/itsl_favicon.png">

    <!-- Core Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navigation.css" asp-append-version="true" />

    <!-- FullCalendar -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/chatbot.css" />
</head>
<body>
    <!-- Header with Consistent Theme -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary-blue border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-university me-2"></i>
                    ITSL Administration
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i> @User.Identity?.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user me-2 text-primary-blue"></i>View Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">

                                            <i class="fas fa-user me-2 text-primary-blue"></i>My Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <button id="themeToggle" class="btn btn-link text-white text-decoration-none">
                                <i id="themeIcon" class="fas fa-moon"></i>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Wrapper -->
    <div class="app-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar bg-primary-blue">
            <div class="sidebar-header">
                <h6 class="sidebar-title text-primary-blue">
                    <i class="fas fa-bars me-2"></i>Navigation
                </h6>
            </div>
            <ul class="nav flex-column sidebar-nav">
                @if (SignInManager.IsSignedIn(User))
                {
                    <!-- Dashboard Links -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Home" asp-action="AdminDashboard">
                                <i class="fas fa-gauge-high me-2"></i>Dashboard
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Lecturer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Home" asp-action="LecturerDashboard">
                                <i class="fas fa-gauge-high me-2"></i>Dashboard
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Tutor"))
                    {
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Home" asp-action="TutorDashboard">
                                <i class="fas fa-gauge-high me-2"></i>Dashboard
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Participant"))
                    {
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Home" asp-action="ParticipantDashboard">
                                <i class="fas fa-gauge-high me-2"></i>Dashboard
                            </a>
                        </li>
                    }

                    <!-- Admin Section -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-user-shield me-2"></i>User Management
                            </a>
                        </li>
                    }

                    <!-- Core Application Links -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Tutor") || User.IsInRole("Lecturer") || User.IsInRole("Participant"))
                    {
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Courses" asp-action="Index">
                                <i class="fas fa-book-open me-2"></i>Courses
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Quiz" asp-action="AvailableQuiz">
                                <i class="fas fa-file-alt me-2"></i>Quizzes
                            </a>
                        </li>

                        <!-- Grade Management -->
                        @if (User.IsInRole("Lecturer") || User.IsInRole("Tutor") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link sidebar-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="fas fa-chart-bar me-2"></i>Grade Management
                                </a>
                                <ul class="dropdown-menu sidebar-dropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Grades" asp-action="GradingOverview">
                                            <i class="fas fa-tachometer-alt me-2 text-primary-blue"></i>Grading Overview
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Grades" asp-action="ExportGradebookPdf"
                                           onclick="return alert('Please select a course from the grading overview to export gradebook.')">
                                            <i class="fas fa-download me-2 text-primary-blue"></i>Export Gradebook
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Participant"))
                        {
                            <li class="nav-item">
                                <a class="nav-link sidebar-link" asp-controller="Grades" asp-action="ParticipantGrades">
                                    <i class="fas fa-graduation-cap me-2"></i>My Grades
                                </a>
                            </li>
                        }

                        <!-- Calendar -->
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="EventSchedules" asp-action="Index">
                                <i class="fas fa-calendar-alt me-2"></i>Classes & Events
                            </a>
                        </li>

                        <!-- Messages -->
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Email" asp-action="SendEmail">
                                <i class="fas fa-envelope me-2"></i>Messages
                            </a>
                        </li>
                    }

                    <!-- Logout -->
                    <li class="nav-item mt-auto">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="w-100">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="nav-link sidebar-link sidebar-logout btn btn-link text-start w-100">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </button>
                        </form>
                    </li>
                }
            </ul>
        </nav>

        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Breadcrumb Navigation -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1 text-primary-blue"></i>Home
                        </a>
                    </li>
                    @RenderSection("Breadcrumbs", required: false)
                </ol>
            </nav>

            <!-- Page Content -->
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!--Chatbot Partial-->
    <partial name="_Chatbot" />

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chatbot.js" asp-append-version="true"></script>
    <script src="~/js/fullCalendar.js"></script>
    <script src="~/js/navigation.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>