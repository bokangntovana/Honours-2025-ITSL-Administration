@using Microsoft.AspNetCore.Identity
@using ITSL_Administration.ViewModels
@inject SignInManager<Users> SignInManager
@{
    ViewData["Title"] = "ITSL Admin";
    Layout = null; // Set to null to avoid double layout rendering
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITSL Administration</title>

    <!-- Added Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Existing styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-header-red border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-university me-2"></i>
                    ITSL Admin
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Replaced _LoginPartial with enhanced dropdown -->
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user me-2"></i> View Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <nav class="sidebar">
        <div class="container-fluid">
            <ul class="nav flex-column">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-gauge"></i>
                            Dashboard
                        </a>
                    </li>
                }
                @if(User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">
                            <i class="fas fa-user-shield me-2"></i>
                            Admin
                        </a>
                    </li>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Lecturer"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Lecturer" asp-action="Index">
                            <i class="fas fa-chalkboard-teacher me-2"></i>
                            Lecturer
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Enrollment" asp-action="MyCourses">
                            <i class="fas fa-user-plus me-2"></i>
                            Enrollments
                        </a>
                    </li>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Lecturer")|| User.IsInRole("Tutor"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Tutor" asp-action="Index">
                            <i class="fas fa-user-graduate me-2"></i>
                            Tutor
                        </a>
                    </li>
                }
                @if (User.IsInRole("Admin")|| User.IsInRole("Tutor") || User.IsInRole("Lecturer") || User.IsInRole("Participant"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Participant" asp-action="Index">
                            <i class="fas fa-users me-2"></i>
                            Participant
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Courses" asp-action="Index">
                            <i class="fas fa-book-open me-2"></i>
                            Courses
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Grades" asp-action="Index">
                            <i class="fa-solid fa-clipboard-check"></i>
                            Grades
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ClassesAndEvents" asp-action="Index">
                            <i class="fas fa-calendar-alt me-2"></i>
                            Classes and Events
                        </a>
                    </li>
                }
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Email" asp-action="SendEmail">
                            <i class="fa-solid fa-envelope"></i>
                            Messages
                        </a>
                    </li>

                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="nav-item nav-link btn btn-link text-decoration-none">
                            <i class="fas fa-sign-out-alt me-2"></i> Logout
                        </button>
                    </form>
                }

            </ul>
        </div>
    </nav>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--Full Calendar Scripts-->
    <script src="~/lib/fullcalendar/core/index.global.min.js"></script>
    <script src="~/lib/fullcalendar/daygrid/index.global.min.js"></script>
    <script src="~/lib/fullcalendar/timegrid/index.global.min.js"></script>
    <script src="~/lib/fullcalendar/interaction/index.global.min.js"></script>
    <!--Main JS scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
