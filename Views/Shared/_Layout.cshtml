<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITSL Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITSL_Administration.styles.css" asp-append-version="true" />
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-header-red border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-university me-2"></i>
                    ITSL Admin
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <nav class="sidebar">
        <div class="container-fluid">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                        <i class="fas fa-user-shield me-2"></i>
                        Admin
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Lecturers" asp-action="Index">
                        <i class="fas fa-chalkboard-teacher me-2"></i>
                        Lecturer
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Enrollments" asp-action="Index">
                        <i class="fas fa-user-plus me-2"></i>
                        Enrollment
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Tutors" asp-action="Index">
                        <i class="fas fa-user-graduate me-2"></i>
                        Tutor
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Participants" asp-action="Index">
                        <i class="fas fa-users me-2"></i>
                        Participant
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Courses" asp-action="Index">
                        <i class="fas fa-book-open me-2"></i>
                        Courses
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Classes and Events
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
