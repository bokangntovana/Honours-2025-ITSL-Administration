@{
    ViewData["Title"] = "Donate to ITSL";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="jumbotron bg-light p-5 rounded-lg m-3">
                <h1 class="display-4"><i class="fas fa-hands-helping text-primary me-3"></i>Support Our Cause</h1>
                <p class="lead">Your donation helps us continue our important work.</p>
                <hr class="my-4">
                <p>Join our community of supporters by making a contribution today.</p>

                <div class="d-grid gap-3 col-md-6 mx-auto mt-4">
                    <a asp-action="RegisterDonor" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i>Register & Donate
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Login if already registered
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>