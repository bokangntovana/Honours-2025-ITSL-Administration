@{
    ViewData["Title"] = "Donate to ITSL - ITSL Administration";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item active">Support Our Mission</li>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-primary-blue text-white text-center">
                    <h4 class="mb-0"><i class="fas fa-hands-helping me-2"></i>Support Our Mission - ITSL Administration</h4>
                </div>
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-heart fa-5x text-primary-blue mb-3"></i>
                        <h2 class="text-primary-blue">Make a Difference Today</h2>
                        <p class="lead text-muted">Your donation helps us continue our important work and support our educational mission.</p>
                    </div>

                    <hr class="my-4">

                    <div class="row text-start mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-graduation-cap text-primary-blue me-3 fa-2x"></i>
                                <div>
                                    <h5 class="mb-1">Support Education</h5>
                                    <p class="mb-0 text-muted">Help students achieve their academic goals</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-book text-primary-blue me-3 fa-2x"></i>
                                <div>
                                    <h5 class="mb-1">Fund Resources</h5>
                                    <p class="mb-0 text-muted">Provide essential learning materials</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-3 col-md-8 mx-auto mt-4">
                        <a asp-action="RegisterDonor" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Register & Donate
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login if Already Registered
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>