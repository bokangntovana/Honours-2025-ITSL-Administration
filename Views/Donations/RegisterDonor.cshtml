@model ITSL_Administration.ViewModels.DonorRegisterViewModel
@{
    ViewData["Title"] = "Register as Donor - ITSL Administration";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-action="Donations">Support Our Mission</a>
    </li>
    <li class="breadcrumb-item active">Register as Donor</li>
}

<div class="account-container">
    <div class="account-box">
        <div class="text-center mb-4">
            <h2 class="text-primary-blue">Become a Supporter</h2>
            <p class="text-muted">Create your donor account to support our mission</p>

            <!-- Donor-specific callout -->
            <div class="alert alert-primary border-primary">
                <div class="d-flex align-items-center">
                    <i class="fas fa-hands-helping fa-2x text-primary-blue me-3"></i>
                    <div class="text-start">
                        <h6 class="mb-1 fw-bold">Make a Difference</h6>
                        <p class="mb-0 small">Your support helps us continue our educational mission and empower students.</p>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="RegisterDonor" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Full Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- Location Information -->
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="City" class="form-label fw-bold">City</label>
                        <input asp-for="City" class="form-control" placeholder="Enter your city" />
                        <span asp-validation-for="City" class="text-danger small"></span>
                        <div class="form-text">We'd love to know where our supporters are from!</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Age" class="form-label">Age (Optional)</label>
                        <input asp-for="Age" class="form-control" placeholder="Enter your age" />
                        <span asp-validation-for="Age" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="IDNumber" class="form-label">ID Number (Optional)</label>
                <input asp-for="IDNumber" class="form-control" placeholder="Enter your ID number" />
                <span asp-validation-for="IDNumber" class="text-danger small"></span>
            </div>

            <!-- Donor-specific information -->
            <div class="mb-4 p-3 bg-light rounded border">
                <h6 class="text-primary-blue mb-2">
                    <i class="fas fa-info-circle me-2"></i>About Your Donation
                </h6>
                <p class="small text-muted mb-0">
                    After registration, you'll be directed to our secure payment page where you can choose your donation amount.
                    All donations are processed securely via Stripe.
                </p>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                <i class="fas fa-user-plus me-2"></i>Register & Continue to Donation
            </button>

            <div class="text-center mt-3">
                <p class="mb-0 text-muted">
                    Already have an account?
                    <a asp-controller="Account" asp-action="Login" class="text-primary-blue text-decoration-none fw-bold">Sign in here</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}