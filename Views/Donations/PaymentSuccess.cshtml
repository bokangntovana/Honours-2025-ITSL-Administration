@model ITSL_Administration.Models.Donation
@{
    ViewData["Title"] = "Payment Successful";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card mt-5">
                <div class="card-header bg-success text-white">
                    <h2><i class="fas fa-check-circle me-2"></i>Payment Successful</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-5x text-success mb-3"></i>
                        <h3>Thank you for your donation of R @Model.Amount.ToString("0.00")!</h3>
                        <p class="lead">Your support helps us continue our important work.</p>
                    </div>

                    <div class="alert alert-success">
                        <h4><i class="fas fa-receipt me-2"></i>Donation Details</h4>
                        <p><strong>Reference:</strong> @Model.StripePaymentIntentId</p>
                        <p><strong>Date:</strong> @Model.DonationDate.ToString("f")</p>
                        @if (!string.IsNullOrEmpty(Model.ReceiptUrl))
                        {
                            <a href="@Model.ReceiptUrl" target="_blank" class="btn btn-sm btn-outline-success">
                                <i class="fas fa-file-invoice me-1"></i>View Receipt
                            </a>
                        }
                    </div>

                    <div class="d-grid gap-3 col-md-6 mx-auto mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
