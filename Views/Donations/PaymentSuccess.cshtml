@model ITSL_Administration.Models.Donation
@{
    ViewData["Title"] = "Payment Successful - ITSL Administration";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-action="Donations">Support Our Mission</a>
    </li>
    <li class="breadcrumb-item active">Payment Successful</li>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-check-circle me-2"></i>Payment Successful - ITSL Administration</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-5x text-success mb-3"></i>
                        <h3 class="text-success">Thank You for Your Generosity!</h3>
                        <p class="lead text-muted">Your donation of R @Model.Amount.ToString("0.00") helps us continue our important work.</p>
                    </div>

                    <div class="alert alert-success text-start">
                        <h5 class="alert-heading"><i class="fas fa-receipt me-2"></i>Donation Details</h5>
                        <p class="mb-1"><strong>Reference:</strong> @Model.StripePaymentIntentId</p>
                        <p class="mb-1"><strong>Date:</strong> @Model.DonationDate.ToString("dd MMM yyyy 'at' HH:mm")</p>
                        <p class="mb-1"><strong>Amount:</strong> R @Model.Amount.ToString("0.00")</p>
                        @if (!string.IsNullOrEmpty(Model.ReceiptUrl))
                        {
                            <div class="mt-2">
                                <a href="@Model.ReceiptUrl" target="_blank" class="btn btn-sm btn-outline-success">
                                    <i class="fas fa-file-invoice me-1"></i>View Receipt
                                </a>
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-center mt-4 pt-3 border-top">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>