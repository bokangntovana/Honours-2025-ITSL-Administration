@model ITSL_Administration.Models.Donation
@{
    ViewData["Title"] = "Payment Failed - ITSL Administration";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-action="Donations">Support Our Mission</a>
    </li>
    <li class="breadcrumb-item active">Payment Failed</li>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-times-circle me-2"></i>Payment Failed - ITSL Administration</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-times-circle fa-5x text-danger mb-3"></i>
                        <h3 class="text-danger">Donation Not Processed</h3>
                        <p class="lead text-muted">Your donation of R @Model.Amount.ToString("0.00") could not be processed.</p>
                    </div>

                    <div class="alert alert-warning text-start">
                        <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i>What happened?</h5>
                        <p class="mb-2">The payment processor reported that your payment could not be completed.</p>
                        <p class="mb-0"><strong>Reference:</strong> @Model.StripePaymentIntentId</p>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4 pt-3 border-top">
                        <a asp-controller="Donations" asp-action="Payment" class="btn btn-primary">
                            <i class="fas fa-credit-card me-2"></i>Try Again
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>