@model ITSL_Administration.Models.Donation
@{
    ViewData["Title"] = "Payment Processing";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card mt-5">
                <div class="card-header bg-info text-white">
                    <h2><i class="fas fa-spinner fa-spin me-2"></i>Payment Processing</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-spinner fa-spin fa-5x text-info mb-3"></i>
                        <h3>Your donation of R @Model.Amount.ToString("0.00") is being processed</h3>
                        <p class="lead">Please wait while we confirm your payment.</p>
                    </div>

                    <div class="alert alert-info">
                        <h4><i class="fas fa-info-circle me-2"></i>What's happening?</h4>
                        <p>Some payment methods take a few moments to verify. We'll notify you by email when the payment is confirmed.</p>
                        <p>Reference: @Model.StripePaymentIntentId </p>
                    </div>

                    <div class="progress mb-4">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 100%"></div>
                    </div>

                    <div class="d-grid gap-3 col-md-6 mx-auto mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-info">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Check payment status every 5 seconds
        setInterval(function() {
            fetch('@Url.Action("CheckPaymentStatus", new { donationId = Model.DonationId })')
                .then(response => response.json())
                .then(data => {
                    if (data.status === "succeeded") {
                        window.location.href = '@Url.Action("PaymentSuccess", new { donationId = Model.DonationId })';
                    } else if (data.status === "failed") {
                        window.location.href = '@Url.Action("PaymentFailed", new { donationId = Model.DonationId })';
                    }
                });
        }, 5000);
    </script>
}