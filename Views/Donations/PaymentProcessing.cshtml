@model ITSL_Administration.Models.Donation
@{
    ViewData["Title"] = "Payment Processing - ITSL Administration";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-action="Donations">Support Our Mission</a>
    </li>
    <li class="breadcrumb-item active">Payment Processing</li>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-primary-blue text-white">
                    <h4 class="mb-0"><i class="fas fa-spinner fa-spin me-2"></i>Payment Processing - ITSL Administration</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-spinner fa-spin fa-5x text-primary-blue mb-3"></i>
                        <h3 class="text-primary-blue">Processing Your Donation</h3>
                        <p class="lead text-muted">Your donation of R @Model.Amount.ToString("0.00") is being confirmed.</p>
                    </div>

                    <div class="alert alert-info text-start">
                        <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i>What's happening?</h5>
                        <p class="mb-2">Some payment methods take a few moments to verify. We'll notify you by email when the payment is confirmed.</p>
                        <p class="mb-0"><strong>Reference:</strong> @Model.StripePaymentIntentId</p>
                    </div>

                    <div class="progress mb-4">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary-blue" style="width: 100%"></div>
                    </div>

                    <div class="d-flex justify-content-center mt-4 pt-3 border-top">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Check payment status every 5 seconds
        setInterval(function() {
            fetch('@Url.Action("CheckPaymentStatus", new { donationId = Model.DonationId })')
                .then(response => response.json())
                .then(data => {
                    if (data.status === "succeeded") {
                        window.location.href = '@Url.Action("PaymentSuccess", new { donationId = Model.DonationId })';
                    } else if (data.status === "failed") {
                        window.location.href = '@Url.Action("PaymentFailed", new { donationId = Model.DonationId })';
                    }
                });
        }, 5000);
    </script>
}