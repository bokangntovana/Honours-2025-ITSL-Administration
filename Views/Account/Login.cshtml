@using ITSL_Administration.ViewModels;
@model LoginViewModel;

@{
    ViewData["Title"] = "Login - ITSL Administration";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item active">Login</li>
}

<div class="account-container">
    <div class="account-box">
        <div class="text-center mb-4">
            <h2 class="text-primary-blue">Welcome to ITSL Administration</h2>
            <p class="text-muted">Sign in to your account</p>
        </div>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label small">Remember me</label>
                </div>
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-primary-blue text-decoration-none small">
                    Forgot password?
                </a>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
            </button>

            <div class="text-center mt-3">
                <p class="mb-0 text-muted">
                    Don't have an account?
                    <a asp-controller="Account" asp-action="Register" class="text-primary-blue text-decoration-none fw-bold">Create one here</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}