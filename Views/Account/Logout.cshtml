@{
    ViewData["Title"] = "Logged Out - ITSL Administration";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item active">Logged Out</li>
}

<div class="account-container">
    <div class="account-box text-center">
        <div class="mb-4">
            <i class="fas fa-check-circle text-success fa-3x"></i>
        </div>
        <h3 class="text-primary-blue mb-3">ITSL Administration</h3>
        <p class="text-muted mb-4">
            <strong>You have been successfully logged out of your account.</strong>
        </p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
            <i class="fas fa-sign-in-alt me-2"></i>Sign In Again
        </a>
    </div>
</div>