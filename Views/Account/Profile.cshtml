@model User
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-user-circle me-2"></i>User Profile</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4"><i class="fas fa-id-card me-2"></i>Full Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4"><i class="fas fa-user me-2"></i>Username</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4"><i class="fas fa-envelope me-2"></i>Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4"><i class="fas fa-phone me-2"></i>Phone</dt>
                        <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not set")</dd>

                        @if (!string.IsNullOrEmpty(Model.CampusName))
                        {
                            <dt class="col-sm-4"><i class="fas fa-university me-2"></i>Campus</dt>
                            <dd class="col-sm-8">@Model.CampusName</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>
