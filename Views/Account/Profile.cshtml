@model User
@{
    ViewData["Title"] = "Profile - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-controller="Account" asp-action="Profile">My Profile</a>
    </li>
    <li class="breadcrumb-item active">View Profile</li>
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary-blue text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-user-circle me-2"></i>User Profile - ITSL Administration</h4>
            <a asp-controller="Account" asp-action="EditProfile" class="btn btn-light btn-sm">
                <i class="fas fa-edit me-1"></i>Edit Profile
            </a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4"><i class="fas fa-id-card me-2 text-primary-blue"></i>Full Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4"><i class="fas fa-user me-2 text-primary-blue"></i>Username</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4"><i class="fas fa-envelope me-2 text-primary-blue"></i>Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4"><i class="fas fa-phone me-2 text-primary-blue"></i>Phone</dt>
                        <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not set")</dd>

                        @if (!string.IsNullOrEmpty(Model.CampusName))
                        {
                            <dt class="col-sm-4"><i class="fas fa-university me-2 text-primary-blue"></i>Campus</dt>
                            <dd class="col-sm-8">@Model.CampusName</dd>
                        }

                        @if (Model.Age > 0)
                        {
                            <dt class="col-sm-4"><i class="fas fa-birthday-cake me-2 text-primary-blue"></i>Age</dt>
                            <dd class="col-sm-8">@Model.Age</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.IDNumber))
                        {
                            <dt class="col-sm-4"><i class="fas fa-id-card me-2 text-primary-blue"></i>ID Number</dt>
                            <dd class="col-sm-8">@Model.IDNumber</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.City))
                        {
                            <dt class="col-sm-4"><i class="fas fa-city me-2 text-primary-blue"></i>City</dt>
                            <dd class="col-sm-8">@Model.City</dd>
                        }

                        <dt class="col-sm-4"><i class="fas fa-hands-helping me-2 text-primary-blue"></i>Volunteer Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.isVolunteer)
                            {
                                <span class="badge bg-success">Active Volunteer</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Not Volunteering</span>
                            }
                        </dd>

                        <dt class="col-sm-4"><i class="fas fa-calendar-plus me-2 text-primary-blue"></i>Member Since</dt>
                        <dd class="col-sm-8">@Model.RegistrationDate.ToString("dd MMMM yyyy")</dd>
                    </dl>
                </div>

                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fas fa-user-circle fa-4x text-primary-blue"></i>
                            </div>
                            <h5>@Model.FullName</h5>
                            <p class="text-muted mb-2">@Model.Email</p>
                            @if (!string.IsNullOrEmpty(Model.CampusName))
                            {
                                <p class="mb-2">
                                    <i class="fas fa-map-marker-alt text-danger me-1"></i>
                                    @Model.CampusName Campus
                                </p>
                            }
                            <div class="mt-3">
                                <a asp-controller="Account" asp-action="EditProfile" class="btn btn-primary btn-sm w-100 mb-2">
                                    <i class="fas fa-edit me-1"></i>Edit Profile
                                </a>
                                <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-outline-primary btn-sm w-100">
                                    <i class="fas fa-lock me-1"></i>Change Password
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>