@model ITSL_Administration.ViewModels.GradeCreateViewModel
@{
    ViewData["Title"] = "Grade Submission - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-controller="Assignment" asp-action="ManageSubmissions" asp-route-id="@Model.Submission.AssignmentId">Submissions</a>
    </li>
    <li class="breadcrumb-item active">Grade Submission</li>
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary-blue text-white">
            <h4 class="mb-0"><i class="fas fa-pen me-2"></i>Grade Submission - ITSL Administration</h4>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="text-primary-blue"><i class="fas fa-user me-2"></i>Participant Details</h5>
                    <p class="mb-1"><strong>Name:</strong> @Model.Submission.Participant?.FullName</p>
                    <p class="mb-1"><strong>Email:</strong> @Model.Submission.Participant?.Email</p>
                    <p class="mb-0"><strong>Submitted:</strong> @Model.Submission.DateSubmitted.ToString("dd MMM yyyy HH:mm")</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-primary-blue"><i class="fas fa-clipboard-list me-2"></i>Assignment Details</h5>
                    <p class="mb-1"><strong>Title:</strong> @Model.Submission.Assignment?.Title</p>
                    <p class="mb-1"><strong>Type:</strong> <span class="badge bg-info">@Model.Submission.Assignment?.AssignmentType</span></p>
                    <!-- REMOVED: Weight display -->
                    <p class="mb-0"><strong>Total Marks:</strong> @Model.Submission.Assignment?.SetAssignmentMark</p>
                </div>
            </div>

            <hr />

            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="Grade.SubmissionId" />
                <input type="hidden" asp-for="Grade.AssignmentId" />
                <input type="hidden" asp-for="Grade.MarkedBy" value="@User.Identity?.Name" />

                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Grade.AssignmentMark" class="form-label fw-bold">Assignment Mark *</label>
                            <input asp-for="Grade.AssignmentMark" class="form-control"
                                   min="0" max="@Model.Submission.Assignment?.SetAssignmentMark"
                                   step="0.1" />
                            <span asp-validation-for="Grade.AssignmentMark" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                Must be between 0 and @Model.Submission.Assignment?.SetAssignmentMark
                            </small>
                        </div>

                        <div class="alert alert-warning">
                            <h6 class="mb-2"><i class="fas fa-calculator me-2"></i>Automatic Calculations</h6>
                            <p class="mb-1"><strong>Pass/Fail:</strong> <span id="passFailStatus">Will be calculated</span></p>
                            <p class="mb-0"><strong>Percentage:</strong> <span id="percentage">0%</span></p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Grade.GradesFeedback" class="form-label fw-bold">Feedback</label>
                            <textarea asp-for="Grade.GradesFeedback" class="form-control" rows="5"
                                      placeholder="Provide constructive feedback for the participant..."></textarea>
                            <span asp-validation-for="Grade.GradesFeedback" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                <span id="feedbackCount">0</span>/500 characters
                            </small>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="alert alert-info">
                        <h6 class="mb-2"><i class="fas fa-info-circle me-2"></i>Grading Information</h6>
                        <p class="mb-1"><strong>Graded by:</strong> @User.Identity?.Name</p>
                        <p class="mb-0"><strong>Date:</strong> @DateTime.Now.ToString("dd MMM yyyy HH:mm")</p>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <a asp-controller="Assignment" asp-action="ManageSubmissions" asp-route-id="@Model.Submission.AssignmentId"
                       class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Grade
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script>
        // Real-time calculations and validation
        const assignmentMarkInput = document.getElementById('Grade_AssignmentMark');
        const feedbackTextarea = document.getElementById('Grade_GradesFeedback');
        const passFailSpan = document.getElementById('passFailStatus');
        const percentageSpan = document.getElementById('percentage');
        const feedbackCountSpan = document.getElementById('feedbackCount');
        const maxMarks = @Model.Submission.Assignment?.SetAssignmentMark;

        assignmentMarkInput.addEventListener('input', function() {
            const mark = parseFloat(this.value) || 0;
            const percentage = maxMarks > 0 ? (mark / maxMarks * 100) : 0;
            const status = mark >= 50 ? 'PASS' : 'FAIL';
            const statusColor = mark >= 50 ? 'text-success' : 'text-danger';

            percentageSpan.textContent = percentage.toFixed(1) + '%';
            passFailSpan.innerHTML = `<span class="${statusColor} fw-bold">${status}</span>`;

            if (mark > maxMarks) {
                this.classList.add('is-invalid');
            } else {
                this.classList.remove('is-invalid');
            }
        });

        feedbackTextarea.addEventListener('input', function() {
            const count = this.value.length;
            feedbackCountSpan.textContent = count;

            if (count > 500) {
                this.classList.add('is-invalid');
                feedbackCountSpan.classList.add('text-danger');
            } else {
                this.classList.remove('is-invalid');
                feedbackCountSpan.classList.remove('text-danger');
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            if (assignmentMarkInput.value) {
                assignmentMarkInput.dispatchEvent(new Event('input'));
            }
            if (feedbackTextarea.value) {
                feedbackTextarea.dispatchEvent(new Event('input'));
            }
        });
    </script>
}