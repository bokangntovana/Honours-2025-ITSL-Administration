@model ITSL_Administration.Models.Grade

@{
    ViewData["Title"] = "Edit Grade";
}

<div class="container mt-4">
    <h2 class="text-primary"><i class="fas fa-edit"></i> Edit Grade</h2>
    <hr />

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="GradeID" />
        <input type="hidden" asp-for="AssignmentId" />
        <input type="hidden" asp-for="SubmissionId" />

        <div class="form-group mb-3">
            <label asp-for="AssignmentMark"></label>
            <input asp-for="AssignmentMark" class="form-control" />
            <span asp-validation-for="AssignmentMark" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="GradesFeedback"></label>
            <textarea asp-for="GradesFeedback" class="form-control"></textarea>
            <span asp-validation-for="GradesFeedback" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Update Grade</button>
        <a asp-controller="Assignment" asp-action="ManageSubmissions" asp-route-id="@Model.AssignmentId" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>
