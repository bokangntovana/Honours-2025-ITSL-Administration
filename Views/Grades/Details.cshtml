@model ITSL_Administration.Models.Grade
@{
    ViewData["Title"] = "Grade Details - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var percentage = Model.AssignmentMark / Model.Assignment?.SetAssignmentMark * 100 ?? 0;
    var isLecturerOrAbove = User.IsInRole("Admin") || User.IsInRole("Lecturer") || User.IsInRole("Tutor");
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-controller="Grades" asp-action="ParticipantGrades">My Grades</a>
    </li>
    <li class="breadcrumb-item active">@Model.Assignment?.Title</li>
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary-blue text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-file-alt me-2"></i>Grade Details - ITSL Administration</h4>
            <div>
                @if (isLecturerOrAbove)
                {
                    <a asp-action="Edit" asp-route-id="@Model.GradeID" class="btn btn-light btn-sm me-2">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                }
                <a asp-action="ParticipantGrades" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Back
                </a>
            </div>
        </div>
        <div class="card-body">
            <!-- Grade Status Banner -->
            <div class="alert @(Model.HasPassed ? "alert-success" : "alert-danger") mb-4">
                <div class="row">
                    <div class="col-md-8">
                        <h4 class="alert-heading">
                            <i class="fas @(Model.HasPassed ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                            @(Model.HasPassed ? "PASS" : "FAIL")
                        </h4>
                        <p class="mb-0">This submission has been @(Model.HasPassed ? "successfully passed" : "marked as failed").</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <h3 class="mb-0">@Model.AssignmentMark.ToString("F1")/@Model.Assignment?.SetAssignmentMark</h3>
                        <span class="badge bg-primary fs-6">@percentage.ToString("F1")%</span>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Left Column: Grade Information -->
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light-blue">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Grade Information</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-muted">Assignment Mark:</dt>
                                <dd class="col-sm-7">
                                    <strong>@Model.AssignmentMark.ToString("F1")</strong> / @Model.Assignment?.SetAssignmentMark
                                    <span class="badge bg-primary ms-2">@percentage.ToString("F1")%</span>
                                </dd>

                                <dt class="col-sm-5 text-muted">Final Course Mark:</dt>
                                <dd class="col-sm-7">
                                    <strong>@Model.FinalMark.ToString("F1")%</strong>
                                    <span class="badge @(Model.FinalMark >= 50 ? "bg-success" : "bg-danger") ms-2">
                                        @(Model.FinalMark >= 50 ? "Passing" : "Failing")
                                    </span>
                                </dd>

                                <dt class="col-sm-5 text-muted">Status:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge @(Model.HasPassed ? "bg-success" : "bg-danger")">
                                        @(Model.HasPassed ? "PASS" : "FAIL")
                                    </span>
                                </dd>

                                <dt class="col-sm-5 text-muted">Graded By:</dt>
                                <dd class="col-sm-7">@Model.MarkedBy</dd>

                                <dt class="col-sm-5 text-muted">Date Recorded:</dt>
                                <dd class="col-sm-7">@Model.DateRecorded.ToString("dd MMM yyyy 'at' HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Assignment Details -->
                    <div class="card mb-4">
                        <div class="card-header bg-light-blue">
                            <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Assignment Details</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-muted">Title:</dt>
                                <dd class="col-sm-7">@Model.Assignment?.Title</dd>

                                <dt class="col-sm-5 text-muted">Course:</dt>
                                <dd class="col-sm-7">@Model.Assignment?.Course?.CourseName</dd>

                                <dt class="col-sm-5 text-muted">Type:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge
                                        @(Model.Assignment?.AssignmentType.ToString() == "Quiz" ? "bg-info" :
                                                                                                                              Model.Assignment?.AssignmentType.ToString() == "WrittenAssignment" ? "bg-primary" : "bg-success")">
                                        @Model.Assignment?.AssignmentType
                                    </span>
                                </dd>

                                <!-- REMOVED: Weight display -->

                                <dt class="col-sm-5 text-muted">Due Date:</dt>
                                <dd class="col-sm-7">@Model.Assignment?.DueDate.ToString("dd MMM yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Participant & Feedback -->
                <div class="col-md-6">
                    <!-- Participant Details -->
                    <div class="card mb-4">
                        <div class="card-header bg-light-blue">
                            <h5 class="mb-0"><i class="fas fa-user me-2"></i>Participant Details</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-muted">Name:</dt>
                                <dd class="col-sm-7">@Model.Submission?.Participant?.FullName</dd>

                                <dt class="col-sm-5 text-muted">Email:</dt>
                                <dd class="col-sm-7">@Model.Submission?.Participant?.Email</dd>

                                <dt class="col-sm-5 text-muted">Submitted:</dt>
                                <dd class="col-sm-7">@Model.Submission?.DateSubmitted.ToString("dd MMM yyyy 'at' HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Feedback Section -->
                    <div class="card mb-4">
                        <div class="card-header bg-light-blue">
                            <h5 class="mb-0"><i class="fas fa-comments me-2"></i>Feedback</h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.GradesFeedback))
                            {
                                <div class="bg-light p-3 rounded">
                                    <p class="mb-0 text-break">@Model.GradesFeedback</p>
                                </div>
                                <div class="mt-2 text-muted">
                                    <small>
                                        <i class="fas fa-info-circle me-1"></i>
                                        @Model.GradesFeedback.Length/500 characters
                                    </small>
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted py-3">
                                    <i class="fas fa-comment-slash fa-2x mb-2"></i>
                                    <p class="mb-0">No feedback provided for this submission.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <div class="btn-group">
                @if (isLecturerOrAbove)
                {
                    <a asp-action="Edit" asp-route-id="@Model.GradeID" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>Edit Grade
                    </a>
                    <a asp-controller="Assignment" asp-action="ManageSubmissions" asp-route-id="@Model.AssignmentId"
                       class="btn btn-info">
                        <i class="fas fa-list me-1"></i>View All Submissions
                    </a>
                }
                <a asp-action="ParticipantGrades" class="btn btn-secondary">
                    <i class="fas fa-list me-1"></i>Back to My Grades
                </a>
            </div>
        </div>
    </div>
</div>