@model ITSL_Administration.Models.Enrollment

@{
    ViewData["Title"] = "Enrollment Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="form-header">
            <i class="fas fa-info-circle me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="form-card p-4">
        <h4 class="mb-4 border-bottom pb-2">Enrollment #@Model.EnrollmentID</h4>

        <div class="row">
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">Participant</dt>
                    <dd class="col-sm-8">@Model.ParticipantName</dd>

                    <dt class="col-sm-4 text-muted fw-bold">Course</dt>
                    <dd class="col-sm-8">@Model.CourseName</dd>

                    <dt class="col-sm-4 text-muted fw-bold">Tutor</dt>
                    <dd class="col-sm-8">@Model.TutorName</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">Lecturer</dt>
                    <dd class="col-sm-8">@Model.LecturerName</dd>

                    <dt class="col-sm-4 text-muted fw-bold">Grade</dt>
                    <dd class="col-sm-8 grade-@(Model.Grade.HasValue ? Model.Grade.Value.ToString()[0] : 'F')">
                        @(Model.Grade?.ToString("0.00") ?? "N/A")
                    </dd>

                    <dt class="col-sm-4 text-muted fw-bold">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsPassed)
                        {
                            <span class="badge bg-success">Passed <i class="fas fa-check ms-1"></i></span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Failed <i class="fas fa-times ms-1"></i></span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="form-actions mt-4 pt-3 border-top">
            <a asp-action="Edit" asp-route-id="@Model.EnrollmentID" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.EnrollmentID" class="btn btn-outline-danger ms-2">
                <i class="fas fa-trash-alt me-2"></i>Delete
            </a>
        </div>
    </div>
</div>