@model ITSL_Administration.Models.Enrollment

@{
    ViewData["Title"] = "Edit Enrollment";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="form-header">
            <i class="fas fa-edit me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="form-card p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="EnrollmentID" />

            <div class="row">
                <!-- Participant -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold text-muted">Participant</label>
                        <select asp-for="ParticipantID" class="form-control" asp-items="ViewBag.ParticipantID">
                            <option value="">-- Select Participant --</option>
                        </select>
                        <span asp-validation-for="ParticipantID" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Course -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold text-muted">Course</label>
                        <select asp-for="ModuleID" class="form-control" asp-items="ViewBag.ModuleID">
                            <option value="">-- Select Course --</option>
                        </select>
                        <span asp-validation-for="ModuleID" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Tutor -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold text-muted">Tutor</label>
                        <select asp-for="TutorID" class="form-control" asp-items="ViewBag.TutorID">
                            <option value="">-- Select Tutor --</option>
                        </select>
                        <span asp-validation-for="TutorID" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Lecturer -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold text-muted">Lecturer</label>
                        <select asp-for="LecturerID" class="form-control" asp-items="ViewBag.LecturerID">
                            <option value="">-- Select Lecturer --</option>
                        </select>
                        <span asp-validation-for="LecturerID" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Grade -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Grade" class="form-label fw-bold text-muted"></label>
                        <input asp-for="Grade" class="form-control" placeholder="Enter grade (0-100)" />
                        <span asp-validation-for="Grade" class="text-danger small"></span>
                    </div>
                </div>

                <!-- IsPassed Toggle -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <div class="form-check form-switch mt-4">
                            <input class="form-check-input" type="checkbox" asp-for="IsPassed">
                            <label class="form-check-label fw-bold text-muted" asp-for="IsPassed"></label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Save Changes
                </button>
                <a asp-action="Details" asp-route-id="@Model.EnrollmentID" class="btn btn-outline-info ms-2">
                    <i class="fas fa-info-circle me-2"></i>View Details
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}