@model IEnumerable<ITSL_Administration.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<div class="container mt-4">
    <div class="index-header">
        <h2 class="form-header">
            <i class="fas fa-user-plus me-2"></i>Enrollments
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Create New
        </a>
    </div>

    <div class="index-card">
        <div class="table-responsive">
            <table class="table index-table">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.EnrollmentID)</th>
                        <th>Participant</th>
                        <th>Course</th>
                        <th>Grade</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.EnrollmentID)</td>
                            <td>@Html.DisplayFor(modelItem => item.Participant.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Course.ModuleName)</td>
                            <td class="grade-@(item.Grade.HasValue ? item.Grade.Value.ToString()[0] : 'F')">
                                @Html.DisplayFor(modelItem => item.Grade)
                            </td>
                            <td>
                                @if (item.IsPassed)
                                {
                                    <span class="badge bg-success">Passed</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Failed</span>
                                }
                            </td>
                            <td class="text-end action-buttons">
                                <a asp-action="Details" asp-route-id="@item.EnrollmentID" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.EnrollmentID" class="btn btn-sm btn-outline-success mx-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.EnrollmentID" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
