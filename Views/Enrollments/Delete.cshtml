@model ITSL_Administration.Models.Enrollment

@{
    ViewData["Title"] = "Delete Enrollment";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="form-header text-danger">
            <i class="fas fa-trash-alt me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="alert alert-danger">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-triangle me-2"></i>Warning: Irreversible Action!
        </h4>
        <p>You are about to permanently delete the enrollment for <strong>@Model.ParticipantName</strong> in <strong>@Model.CourseName</strong>. All associated data will be lost.</p>
    </div>

    <div class="form-card border-danger p-4">
        <h4 class="mb-4 text-danger">Enrollment Summary</h4>

        <div class="row">
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">Enrollment ID</dt>
                    <dd class="col-sm-8">@Model.EnrollmentID</dd>

                    <dt class="col-sm-4 text-muted fw-bold">Participant</dt>
                    <dd class="col-sm-8">@Model.ParticipantName</dd>

                    <dt class="col-sm-4 text-muted fw-bold">Course</dt>
                    <dd class="col-sm-8">@Model.CourseName</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row details-list">
                    <dt class="col-sm-4 text-muted fw-bold">Grade</dt>
                    <dd class="col-sm-8">@(Model.Grade?.ToString("0.00") ?? "N/A")</dd>

                    <dt class="col-sm-4 text-muted fw-bold">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsPassed)
                        {
                            <span class="badge bg-success">Passed</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Failed</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4 pt-3 border-top">
            <input type="hidden" asp-for="EnrollmentID" />
            <div class="d-flex justify-content-end">
                <a asp-action="Details" asp-route-id="@Model.EnrollmentID" class="btn btn-outline-info me-2">
                    <i class="fas fa-info-circle me-2"></i>View Details
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Permanent Delete
                </button>
            </div>
        </form>
    </div>
</div>