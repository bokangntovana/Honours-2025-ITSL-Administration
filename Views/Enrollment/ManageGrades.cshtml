@using ITSL_Administration;
@model List<Enrollment>


@{
    ViewData["Title"] = "Manage Grades for " + ViewBag.CourseName;
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="UpdateGrades" method="post">
    <input type="hidden" name="courseId" value="@ViewBag.CourseId" />
    <table class="table">
        <thead>
            <tr>
                <th>Participant</th>
                <th>Current Grade</th>
                <th>Grade (0-100)</th>
                <th>Grade Symbol</th>
                <th>Feedback</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].Participant.FullName
                        <input type="hidden" asp-for="@Model[i].EnrollmentId" />
                    </td>
                    <td>@(Model[i].Grade?.ToString("0.00") ?? "-")</td>
                    <td>
                        <input asp-for="@Model[i].Grade" class="form-control" style="width: 80px;" />
                        <span asp-validation-for="@Model[i].Grade" class="text-danger"></span>
                    </td>
                    <td>@Model[i].GradeSymbol</td>
                    <td>
                        <textarea asp-for="@Model[i].GradeFeedback" class="form-control" rows="2"></textarea>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Grades</button>
    <a asp-action="CourseParticipants" asp-route-courseId="@ViewBag.CourseId" class="btn btn-secondary">Back to Participants</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

