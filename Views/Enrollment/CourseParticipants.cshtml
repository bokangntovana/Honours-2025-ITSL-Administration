@using ITSL_Administration;
@model IEnumerable<Enrollment>

@{
    ViewData["Title"] = "Course Participants";
}

<h2>Participants for @ViewBag.CourseName</h2>

<a asp-action="ManageGrades" asp-route-courseId="@Model.FirstOrDefault()?.CourseId" class="btn btn-info mb-3">Manage Grades</a>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Participant Name</th>
            <th>Participant Email</th>
            <th>Enrollment Date</th>
            <th>Enrollment Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Participant.FullName</td>
                <td>@item.Participant.Email</td>
                <td>@item.EnrollmentDate.ToString("d")</td>
                <td>@item.Status</td>
                <td>
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="enrollmentId" value="@item.EnrollmentId" />
                        <select name="status" class="form-control">
                            <option value="Pending">Pending</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                            <option value="Completed">Completed</option>
                        </select>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
