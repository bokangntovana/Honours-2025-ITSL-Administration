@using ITSL_Administration;
@model IEnumerable<Enrollment>


@{
    ViewData["Title"] = "My Courses";
}

<h2>My Courses</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Enrollment Date</th>
            <th>Enrollment Status</th>
            <th>Grade (0-100)</th>
            <th>Grade Symbol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Course.CourseName</td>
                <td>@item.EnrollmentDate.ToString("d")</td>
                <td>@item.Status</td>
                <td>@(item.Grade?.ToString("0.00") ?? "-")</td>
                <td>@item.GradeSymbol</td>
                <td>
                    @if (item.Grade.HasValue)
                    {
                        <a asp-action="GradeReport" class="btn btn-info btn-sm">View Details</a>
                    }
                </td>


            </tr>
        }
    </tbody>
</table>

<a asp-action="Enroll" class="btn btn-primary">Enroll in New Course</a>