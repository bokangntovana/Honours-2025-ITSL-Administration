@model ITSL_Administration.Models.EventSchedule

@{
    ViewData["Title"] = "Delete Event";

    string FormatDateTime(DateTime dateTime)
    {
        return dateTime.ToString("f");
    }
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-action="Index">Event Schedule</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Delete Event</li>
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Event</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this event?</h5>

                    <div class="card mt-3">
                        <div class="card-body">
                            <h6 class="card-title">@Model.Title</h6>
                            <p class="card-text mb-0">
                                <strong>Start:</strong> @FormatDateTime(Model.Start)<br>
                                <strong>End:</strong> @FormatDateTime(Model.End)<br>
                                @if (!string.IsNullOrWhiteSpace(Model.Description))
                                {
                                    <strong>Description:</strong> 
                                    @Model.Description
                                }
                            </p>
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
