@model ITSL_Administration.Models.Tutor

@{
    ViewData["Title"] = "Delete Tutor";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="form-header text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>Delete Tutor
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="alert alert-danger">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-circle me-2"></i>Warning!
        </h4>
        <p>You are about to permanently delete this tutor record. This action cannot be undone.</p>
    </div>

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-user-graduate me-2"></i>Tutor Details
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row details-list">
                        <dt class="col-sm-10 text-muted fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-12 text-muted fw-bold">@Html.DisplayNameFor(model => model.Surname)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Surname)</dd>

                        <dt class="col-sm-10 text-muted fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row details-list">
                        <dt class="col-sm-10 text-muted fw-bold">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                        <dt class="col-sm-10 text-muted fw-bold">@Html.DisplayNameFor(model => model.Campus)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Campus)</dd>

                        <dt class="col-sm-12 text-muted fw-bold">@Html.DisplayNameFor(model => model.IsRegisteredForITSL)</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsRegisteredForITSL)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete" class="d-flex justify-content-between">
            <input type="hidden" asp-for="TutorID" />
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Cancel
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
            </button>
        </form>
    </div>
</div>