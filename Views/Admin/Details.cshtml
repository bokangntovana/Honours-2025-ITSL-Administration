@using ITSL_Administration.ViewModels;
@model AdminUserViewModel

@{
    ViewData["Title"] = "View User Details";
}

<div class="card form-card">
    <div class="card-body">
        <h2 class="form-header">User Details</h2>

        <dl class="details-list">
            <dt>@Html.DisplayNameFor(model => model.FullName)</dt>
            <dd>@Model.FullName</dd>

            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Model.Email</dd>

            <dt>@Html.DisplayNameFor(model => model.UserName)</dt>
            <dd>@Model.UserName</dd>

            <dt>@Html.DisplayNameFor(model => model.RegistrationDate)</dt>
            <dd>@Model.RegistrationDate.ToString("dd MM yyyy")</dd>

            <dt>@Html.DisplayNameFor(model => model.Role)</dt>
            <dd>@Model.Role</dd>

            <dt>@Html.DisplayNameFor(model => model.Age)</dt>
            <dd>@Model.Age</dd>

            <dt>@Html.DisplayNameFor(model => model.IDNumber)</dt>
            <dd>@Model.IDNumber</dd>

            <dt>@Html.DisplayNameFor(model => model.City)</dt>
            <dd>@Model.City</dd>

            <dt>@Html.DisplayNameFor(model => model.CampusName)</dt>
            <dd>@Model.CampusName</dd>
        </dl>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>