@using ITSL_Administration.ViewModels;
@model AdminUserViewModel

@{
    ViewData["Title"] = "User Details - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-controller="Admin" asp-action="Index">User Management</a>
    </li>
    <li class="breadcrumb-item active">@Model.FullName</li>
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary-blue text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-user-circle me-2"></i>User Details - ITSL Administration</h4>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light btn-sm me-2">
                    <i class="fas fa-edit me-1"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Back
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary-blue mb-3"><i class="fas fa-user me-2"></i>Personal Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Full Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4 text-muted">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4 text-muted">Username</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4 text-muted">Registration Date</dt>
                        <dd class="col-sm-8">@Model.RegistrationDate.ToString("dd MMMM yyyy")</dd>

                        <dt class="col-sm-4 text-muted">Role</dt>
                        <dd class="col-sm-8">
                            <span class="badge
                                @(Model.Role == "Admin" ? "bg-danger" :
                                                                    Model.Role == "Lecturer" ? "bg-primary" :
                                                                    Model.Role == "Tutor" ? "bg-info" : "bg-secondary")">
                                @Model.Role
                            </span>
                        </dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5 class="text-primary-blue mb-3"><i class="fas fa-info-circle me-2"></i>Additional Information</h5>
                    <dl class="row">
                        @if (Model.Age.HasValue && Model.Age > 0)
                        {
                            <dt class="col-sm-4 text-muted">Age</dt>
                            <dd class="col-sm-8">@Model.Age</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.IDNumber))
                        {
                            <dt class="col-sm-4 text-muted">ID Number</dt>
                            <dd class="col-sm-8">@Model.IDNumber</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.City))
                        {
                            <dt class="col-sm-4 text-muted">City</dt>
                            <dd class="col-sm-8">@Model.City</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.CampusName))
                        {
                            <dt class="col-sm-4 text-muted">Campus</dt>
                            <dd class="col-sm-8">
                                <i class="fas fa-map-marker-alt text-danger me-1"></i>@Model.CampusName
                            </dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i>Edit User
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i>Delete User
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-list me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>