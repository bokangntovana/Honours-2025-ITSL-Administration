@using ITSL_Administration.ViewModels;
@model AdminUserViewModel

@{
    ViewData["Title"] = "Delete User - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a asp-controller="Admin" asp-action="Index">User Management</a>
    </li>
    <li class="breadcrumb-item">
        <a asp-controller="Admin" asp-action="Details" asp-route-id="@Model.Id">@Model.FullName</a>
    </li>
    <li class="breadcrumb-item active">Delete User</li>
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete User - ITSL Administration</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading"><i class="fas fa-warning me-2"></i>Warning!</h5>
                <p class="mb-0">You are about to permanently delete this user. This action cannot be undone.</p>
            </div>

            <h5 class="text-danger mb-3">User Details</h5>
            <dl class="row">
                <dt class="col-sm-3 text-muted">Full Name</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3 text-muted">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3 text-muted">Registration Date</dt>
                <dd class="col-sm-9">@Model.RegistrationDate.ToString("dd MMMM yyyy")</dd>

                <dt class="col-sm-3 text-muted">Account Age</dt>
                <dd class="col-sm-9">@((DateTime.Now - Model.RegistrationDate).Days) days</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>