@using ITSL_Administration.ViewModels;
@model IEnumerable<AdminUserViewModel>

@{
    ViewData["Title"] = "User Management - ITSL Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <li class="breadcrumb-item active">User Management</li>
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary-blue">
            <i class="fas fa-users-cog me-2"></i>User Management - ITSL Administration
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Create New User
        </a>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search & Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label fw-bold">Search Users</label>
                    <input type="text" name="searchString" value="@ViewBag.CurrentFilter"
                           class="form-control" placeholder="Search by name, email, or username...">
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Filter by Role</label>
                    <select name="roleFilter" class="form-select" asp-items="@(new SelectList(ViewBag.Roles))">
                        <option value="">All Roles</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Apply Filters
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header bg-light-blue">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Registered Users</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Full Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Registration Date</th>
                            <th>Role</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.FullName</strong>
                                    @if (!string.IsNullOrEmpty(item.CampusName))
                                    {
                                        <br>
                                        <small class="text-muted">@item.CampusName Campus</small>
                                    }
                            </td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.RegistrationDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge
                                        @(item.Role == "Admin" ? "bg-danger" :
                                                                                item.Role == "Lecturer" ? "bg-primary" :
                                                                                item.Role == "Tutor" ? "bg-info" : "bg-secondary")">
                                    @item.Role
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary" title="Edit User">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger" title="Delete User">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                                                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>