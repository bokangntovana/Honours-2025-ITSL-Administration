@using ITSL_Administration
@model IEnumerable<Submission>
@{
    ViewData["Title"] = "My Submissions";
}

<h2>My Submissions</h2>

<table class="table">
    <thead>
        <tr>
            <th>Assignment</th>
            <th>Course</th>
            <th>Submission Date</th>
            <th>File</th>
            <th>Grade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var submission in Model)
        {
            <tr>
                <td>@submission.Assignment.Title</td>
                <td>@submission.Assignment.Course.CourseName</td>
                <td>@submission.SubmissionDate.ToString("g")</td>
                <td>
                    <a asp-action="Download" asp-route-id="@submission.SubmissionId" class="btn btn-sm btn-info">
                        Download
                    </a>
                </td>
                <td>
                    @if (submission.Grade.HasValue)
                    {
                        <span>@submission.Grade / @submission.Assignment.MaxPoints</span>
                        @if (!string.IsNullOrEmpty(submission.Feedback))
                        {
                            <br />
                            <small>@submission.Feedback</small>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Not graded</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
