@model IEnumerable<ITSL_Administration.Models.Submission>

@{
    ViewData["Title"] = "Submissions";
    var assignmentId = ViewBag.AssignmentId;
}

<div class="container mt-4">
    <h2 class="text-primary mb-3"><i class="fas fa-file-upload"></i> Submissions</h2>
    <a asp-action="Create" asp-route-assignmentId="@assignmentId" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Submit Assignment
    </a>

    <table class="table table-striped table-bordered">
        <thead class="bg-light text-dark">
            <tr>
                <th>Participant</th>
                <th>Date Submitted</th>
                <th>Grade</th>
                <th>Files</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Participant?.FullName</td>
                    <td>@item.DateSubmitted.ToString("g")</td>
                    <td>
                        @if (item.Grade != null)
                        {
                            <span class="badge bg-info text-dark">@item.Grade.AssignmentMark%</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Not graded</span>
                        }
                    </td>
                    <td>
                        @foreach (var file in item.Files)
                        {
                            <a href="@Url.Action("Download", "File", new { id = file.FileId })" class="btn btn-link">
                                <i class="fas fa-download"></i> @file.FileName
                            </a>
                    
                            <br />
                        }
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.SubmissionID" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
