@using ITSL_Administration
@model Assignment
@{
    ViewData["Title"] = "Take Quiz";
}

<h2>@Model.Title</h2>
<h4>Course: @Model.Course.CourseName</h4>
<h5>Due: @Model.DueDate.ToString("g")</h5>

<form asp-action="SubmitQuiz" method="post">
    <input type="hidden" name="assignmentId" value="@Model.AssignmentId" />

    @foreach (var question in Model.QuizQuestions.OrderBy(q => q.DisplayOrder))
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@question.QuestionText</h5>
                <span class="badge badge-secondary">@question.Points point(s)</span>
                <span class="badge badge-info ml-2">@question.QuestionType</span>
            </div>
            <div class="card-body">
                @if (question.QuestionType == QuestionType.MultipleChoice)
                {
                    foreach (var option in question.Options)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio"
                                   name="selectedOptions[@question.QuizQuestionId]"
                                   id="option_@option.QuestionOptionId"
                                   value="@option.QuestionOptionId">
                            <label class="form-check-label" for="option_@option.QuestionOptionId">
                                @option.OptionText
                                @if (option.IsCorrect)
                                {
                                    <span class="text-success">(Correct)</span>
                                }
                            </label>
                        </div>
                    }
                }
                else if (question.QuestionType == QuestionType.TrueFalse)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio"
                               name="answers[@question.QuizQuestionId]"
                               id="true_@question.QuizQuestionId"
                               value="True">
                        <label class="form-check-label" for="true_@question.QuizQuestionId">True</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio"
                               name="answers[@question.QuizQuestionId]"
                               id="false_@question.QuizQuestionId"
                               value="False">
                        <label class="form-check-label" for="false_@question.QuizQuestionId">False</label>
                    </div>
                }
                else
                {
                    <textarea class="form-control" name="answers[@question.QuizQuestionId]" rows="3"></textarea>
                }
            </div>
        </div>
    }

    <div class="form-group">
        <input type="submit" value="Submit Quiz" class="btn btn-primary" />
        <a asp-action="MySubmissions" class="btn btn-secondary">Cancel</a>
    </div>
</form>
